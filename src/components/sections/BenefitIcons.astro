---
interface Props {
  variant?: 'light' | 'dark';
  items?: {
    icon: string;
    title: string;
    description: string;
  }[];
}

const { variant = 'dark', items } = Astro.props;

const textClass = variant === 'dark' ? 'text-white' : 'text-neutral-900';
const subtextClass = variant === 'dark' ? 'text-neutral-300' : 'text-neutral-600';
const iconBgClass = variant === 'dark' ? 'bg-primary-500/20' : 'bg-primary-100';
const iconClass = variant === 'dark' ? 'text-primary-400' : 'text-primary-600';

// Default benefits for handyman services
const defaultItems = [
  {
    icon: 'quality',
    title: 'Quality Guaranteed',
    description: 'Work you can trust',
  },
  {
    icon: 'fast',
    title: 'Fast Response',
    description: 'Same-day available',
  },
  {
    icon: 'local',
    title: '100% Local',
    description: 'Charlotte-based team',
  },
  {
    icon: 'insured',
    title: 'Fully Insured',
    description: 'Peace of mind',
  },
];

const benefitItems = items || defaultItems;
---

<div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
  {benefitItems.map((item) => (
    <div class="flex flex-col items-center text-center p-3 md:p-4">
      <!-- Icon Container -->
      <div class={`w-12 h-12 md:w-14 md:h-14 rounded-full ${iconBgClass} flex items-center justify-center mb-3`}>
        {item.icon === 'quality' && (
          <svg class={`w-6 h-6 md:w-7 md:h-7 ${iconClass}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
          </svg>
        )}
        {item.icon === 'fast' && (
          <svg class={`w-6 h-6 md:w-7 md:h-7 ${iconClass}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        )}
        {item.icon === 'local' && (
          <svg class={`w-6 h-6 md:w-7 md:h-7 ${iconClass}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        )}
        {item.icon === 'insured' && (
          <svg class={`w-6 h-6 md:w-7 md:h-7 ${iconClass}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        )}
        {item.icon === 'tools' && (
          <svg class={`w-6 h-6 md:w-7 md:h-7 ${iconClass}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        )}
        {item.icon === 'clock' && (
          <svg class={`w-6 h-6 md:w-7 md:h-7 ${iconClass}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        )}
        {item.icon === 'star' && (
          <svg class={`w-6 h-6 md:w-7 md:h-7 ${iconClass}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
          </svg>
        )}
        {item.icon === 'check' && (
          <svg class={`w-6 h-6 md:w-7 md:h-7 ${iconClass}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
          </svg>
        )}
      </div>
      <!-- Text -->
      <h3 class={`font-heading font-bold text-sm md:text-base ${textClass}`}>
        {item.title}
      </h3>
      <p class={`text-xs md:text-sm ${subtextClass}`}>
        {item.description}
      </p>
    </div>
  ))}
</div>

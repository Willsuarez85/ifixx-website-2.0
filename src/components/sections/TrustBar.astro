---
interface Props {
  variant?: 'light' | 'dark';
}

const { variant = 'light' } = Astro.props;

const bgClass = variant === 'dark'
  ? 'bg-neutral-800'
  : 'bg-neutral-100';

const textClass = variant === 'dark'
  ? 'text-white'
  : 'text-neutral-900';

const subtextClass = variant === 'dark'
  ? 'text-neutral-400'
  : 'text-neutral-600';

const borderClass = variant === 'dark'
  ? 'border-neutral-700'
  : 'border-neutral-200';

const reviewPlatforms = [
  {
    name: 'Google',
    rating: '5.0',
    hasStars: true,
    hasLink: true,
    url: 'https://share.google/etUzpmu9VuUzDVDZJ',
  },
  {
    name: 'Facebook',
    rating: null,
    hasStars: false,
    hasLink: true,
    url: 'https://www.facebook.com/ifixxnc',
  },
  {
    name: 'Yelp',
    rating: '5.0',
    hasStars: true,
    hasLink: false,
    url: null,
  },
  {
    name: 'Nextdoor',
    rating: null,
    hasStars: false,
    hasLink: false,
    url: null,
  },
];
---

<section class={`py-6 ${bgClass} border-y ${borderClass}`}>
  <div class="container">
    <div class="flex flex-col items-center gap-5">
      <!-- Heading -->
      <p class={`text-sm font-medium ${subtextClass}`}>
        Find Us & Read Our Reviews
      </p>

      <!-- Platform Reviews -->
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-10 lg:gap-14">
        {reviewPlatforms.map((platform) => {
          const content = (
            <div class={`flex items-center gap-3 ${platform.hasLink ? 'hover:scale-105 transition-transform duration-200' : ''}`}>
              <!-- Platform Icon -->
              <div class="flex-shrink-0">
                {platform.name === 'Google' && (
                  <svg class="w-8 h-8" viewBox="0 0 24 24" fill="none">
                    <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                    <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                    <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                    <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                  </svg>
                )}
                {platform.name === 'Facebook' && (
                  <svg class="w-8 h-8" viewBox="0 0 24 24" fill="#1877F2">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                )}
                {platform.name === 'Yelp' && (
                  <svg class="w-8 h-8" viewBox="0 0 228 228" fill="#D32323">
                    <path d="M173.4 163.2c-1.6-4.3-6.2-5.8-13.1-9.4l-29.5-15.5c-2.3-1.2-4.3-1.8-5.9-1.8-3.2 0-5.5 2.2-5.6 6.2 0 2.9 1.3 5.4 3.7 6.7l28.6 17.4c6.9 4.2 11.7 5.3 14.8 5.3 2.3 0 5.6-.6 7-4.7.5-1.5.5-2.7 0-4.2zm-33.3-45.3c1.7 2.9 5.2 4.7 9 4.7 1.9 0 3.8-.5 5.6-1.3l30.8-14.1c7.3-3.3 10.4-6.9 10.4-11.8 0-1.4-.3-2.9-.9-4.3-2.2-5.1-7.8-6.1-16.6-6.1h-2l-31.5 3.4c-4.8.5-8.6 4.1-8.6 9.2 0 1.4.3 2.8.8 4.1l3 16.2zm-25.4 30.9l-1.4-34c-.2-4.2-3.3-7.2-7.4-7.2-1.3 0-2.6.3-3.9.9-2.7 1.3-4.5 3.7-4.8 6.5l-5.2 35.4c-.8 5.5-.3 9.4 1.7 12.2 1.6 2.3 4.1 3.5 7.2 3.5h.5c6.9-.3 13.4-8.8 13.3-17.3zm-9.5-68.6l13.4-31.7c2.9-6.9 2.6-11.3.6-14.4-1.5-2.3-4.1-3.7-7.8-4.1h-.2c-5.7 0-10.2 3.7-15.8 12.9L76.1 73.6c-3 5-3.7 9.5-2.1 13 1.9 4.3 6.6 6.5 10.9 6.5 2.7 0 5.2-.8 6.9-1.7l10.2-5.7c1.4-.8 2.6-2.3 4.1-5.5zm-33 55.9c.3-3-1.2-6.7-4.2-8.2L39.9 111c-6.4-3.1-11-3.5-14.4-1.4-2.4 1.4-3.8 4-4.4 7.5-.3 1.9-.3 4 0 6.2l4.5 32.2c1 7.2 4.6 11.6 9.7 11.6h.5c6.1-.4 10.9-5.9 14.2-11.1l12.9-20.7c2.7-4.4 4-7.8 4.2-9.2z"/>
                  </svg>
                )}
                {platform.name === 'Nextdoor' && (
                  <svg class="w-8 h-8" viewBox="0 0 24 24" fill="#00B246">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm4.5 14.5h-9v-5c0-2.49 2.01-4.5 4.5-4.5s4.5 2.01 4.5 4.5v5z"/>
                    <path d="M12 9c-1.38 0-2.5 1.12-2.5 2.5v3h5v-3c0-1.38-1.12-2.5-2.5-2.5z" fill="#fff"/>
                  </svg>
                )}
              </div>

              <!-- Rating Info -->
              <div class="flex flex-col">
                <span class={`text-sm font-bold ${textClass}`}>{platform.name}</span>
                {platform.hasStars && (
                  <div class="flex items-center gap-1">
                    <!-- 5 Stars -->
                    <div class="flex">
                      {[1,2,3,4,5].map(() => (
                        <svg class="w-3.5 h-3.5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      ))}
                    </div>
                    <span class={`text-xs font-medium ${subtextClass}`}>{platform.rating}</span>
                  </div>
                )}
              </div>
            </div>
          );

          return platform.hasLink ? (
            <a
              href={platform.url}
              target="_blank"
              rel="noopener noreferrer"
              title={`Visit iFixx on ${platform.name}`}
            >
              {content}
            </a>
          ) : (
            <div title={`iFixx on ${platform.name}`}>
              {content}
            </div>
          );
        })}
      </div>
    </div>
  </div>
</section>

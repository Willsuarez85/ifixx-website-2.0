---
const benefits = [
  {
    title: 'Fully Insured',
    description: 'Every project is backed by full insurance coverage for your peace of mind.',
    icon: 'shield'
  },
  {
    title: 'Family-Owned',
    description: 'We treat every home like it\'s our own. Personal service, genuine care, and lasting relationships.',
    icon: 'heart'
  },
  {
    title: 'Transparent Pricing',
    description: 'No hidden fees, no surprises. Get a detailed quote upfront and know exactly what you\'re paying.',
    icon: 'receipt'
  },
  {
    title: '5+ Years Experience',
    description: 'Over 500 projects completed with a 5-star rating. We bring expertise to every job.',
    icon: 'star'
  },
  {
    title: 'Quality Guaranteed',
    description: 'We stand behind our work. If you\'re not satisfied, we\'ll make it right — guaranteed.',
    icon: 'check'
  },
  {
    title: 'Fast Response',
    description: 'Quick turnaround on estimates and project scheduling. We respect your time.',
    icon: 'clock'
  }
];

const icons: Record<string, string> = {
  shield: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
  heart: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />`,
  receipt: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 14l6-6m-5.5.5h.01m4.99 5h.01M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16l3.5-2 3.5 2 3.5-2 3.5 2z" />`,
  star: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />`,
  check: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  clock: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />`
};
---

<section class="section">
  <div class="container">
    <!-- Section Header -->
    <div class="text-center max-w-2xl mx-auto mb-12 lg:mb-16">
      <h2 class="text-3xl lg:text-4xl font-heading font-bold text-neutral-900 mb-4">
        Why Choose iFixx?
      </h2>
      <p class="text-lg text-neutral-600">
        We're not just contractors — we're your neighbors committed to making Charlotte homes better.
      </p>
    </div>

    <!-- Benefits Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {benefits.map((benefit) => (
        <div class="flex gap-4">
          <!-- Icon -->
          <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-secondary-50 flex items-center justify-center">
            <svg class="w-6 h-6 text-secondary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={icons[benefit.icon]} />
          </div>
          
          <!-- Content -->
          <div>
            <h3 class="text-lg font-heading font-semibold text-neutral-900 mb-1">
              {benefit.title}
            </h3>
            <p class="text-neutral-600 text-sm leading-relaxed">
              {benefit.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

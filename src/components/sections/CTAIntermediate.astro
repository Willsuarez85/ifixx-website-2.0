---
interface Props {
  headline?: string;
  subheadline?: string;
  buttonText?: string;
  buttonHref?: string;
  showPhone?: boolean;
  variant?: 'primary' | 'subtle' | 'emergency';
}

const {
  headline = "Ready to Transform Your Home?",
  subheadline = "Get a free, no-obligation estimate from our local Charlotte team.",
  buttonText = "Request Free Estimate",
  buttonHref = "/contact",
  showPhone = true,
  variant = 'primary',
} = Astro.props;

const phoneHref = 'tel:+19803916833';
const phoneDisplay = '(980) 391-6833';

const bgClass = variant === 'primary'
  ? 'bg-gradient-to-r from-primary-600 to-primary-500'
  : variant === 'emergency'
  ? 'bg-gradient-to-r from-emergency-600 to-emergency-500'
  : 'bg-neutral-100';

const textClass = variant === 'primary' || variant === 'emergency'
  ? 'text-white'
  : 'text-neutral-900';

const subtextClass = variant === 'primary'
  ? 'text-primary-100'
  : variant === 'emergency'
  ? 'text-emergency-100'
  : 'text-neutral-600';

const buttonClass = variant === 'primary'
  ? 'bg-neutral-900 text-white hover:bg-neutral-800'
  : variant === 'emergency'
  ? 'bg-white text-emergency-600 hover:bg-neutral-100 font-bold'
  : 'bg-primary-500 text-neutral-900 hover:bg-primary-400';
---

<section class={`py-10 md:py-14 ${bgClass}`}>
  <div class="container">
    <div class="flex flex-col lg:flex-row items-center justify-between gap-6 lg:gap-10">
      <!-- Text Content -->
      <div class="text-center lg:text-left max-w-2xl">
        <h2 class={`text-2xl md:text-3xl font-heading font-bold ${textClass} mb-2`}>
          {headline}
        </h2>
        <p class={`text-base md:text-lg ${subtextClass}`}>
          {subheadline}
        </p>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center gap-4">
        <a
          href={buttonHref}
          class={`btn px-8 py-4 text-lg font-bold rounded-lg transition-all duration-200 ${buttonClass}`}
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          {buttonText}
        </a>

        {showPhone && (
          <a
            href={phoneHref}
            class={`flex items-center gap-2 font-bold ${variant === 'primary' || variant === 'emergency' ? 'text-white hover:text-white/80' : 'text-neutral-700 hover:text-neutral-900'} transition-colors`}
            data-event="phone_click"
          >
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <span class="hidden sm:inline">or call</span>
            <span class="underline">{phoneDisplay}</span>
          </a>
        )}
      </div>
    </div>
  </div>
</section>

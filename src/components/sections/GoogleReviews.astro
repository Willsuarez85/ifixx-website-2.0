---
interface Props {
  title?: string;
}

const { title = 'What Our Customers Say' } = Astro.props;

const reviews = [
  {
    name: 'Michael Thompson',
    rating: 5,
    date: '2 weeks ago',
    text: 'iFixx did an amazing job on our bathroom remodel. Professional, on time, and the quality exceeded our expectations. Will definitely use them again!',
    avatar: 'M'
  },
  {
    name: 'Sarah Rodriguez',
    rating: 5,
    date: '1 month ago',
    text: 'Called them for an emergency plumbing issue and they were at my house within 2 hours. Fixed the problem quickly and at a fair price. Highly recommend!',
    avatar: 'S'
  },
  {
    name: 'David Chen',
    rating: 5,
    date: '3 weeks ago',
    text: 'We hired iFixx for our kitchen renovation and couldn\'t be happier. The team was professional, clean, and communicated throughout the entire project.',
    avatar: 'D'
  },
  {
    name: 'Jennifer Martinez',
    rating: 5,
    date: '1 month ago',
    text: 'Best handyman service in Charlotte! They\'ve helped us with multiple projects - painting, electrical, and carpentry. Always reliable and quality work.',
    avatar: 'J'
  }
];

const averageRating = 5.0;
const totalReviews = 87;
---

<section class="section">
  <div class="container">
    <!-- Header -->
    <div class="text-center max-w-2xl mx-auto mb-12">
      <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-4">
        {title}
      </h2>

      <!-- Overall Rating -->
      <div class="flex items-center justify-center gap-4">
        <div class="flex items-center gap-1">
          {[1, 2, 3, 4, 5].map(() => (
            <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          ))}
        </div>
        <span class="text-2xl font-bold text-neutral-900">{averageRating}</span>
        <span class="text-neutral-500">({totalReviews} reviews on Google)</span>
      </div>
    </div>

    <!-- Reviews Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto">
      {reviews.map((review) => (
        <div class="bg-white rounded-xl p-6 shadow-sm border border-neutral-100">
          <!-- Header -->
          <div class="flex items-start gap-4 mb-4">
            <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center">
              <span class="text-primary-700 font-bold text-lg">{review.avatar}</span>
            </div>
            <div class="flex-1">
              <div class="flex items-center justify-between">
                <h4 class="font-semibold text-neutral-900">{review.name}</h4>
                <img
                  src="https://www.google.com/favicon.ico"
                  alt="Google"
                  class="w-5 h-5"
                  loading="lazy"
                />
              </div>
              <div class="flex items-center gap-2 mt-1">
                <div class="flex">
                  {[...Array(review.rating)].map(() => (
                    <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>
                <span class="text-sm text-neutral-500">{review.date}</span>
              </div>
            </div>
          </div>

          <!-- Review Text -->
          <p class="text-neutral-600 leading-relaxed">
            "{review.text}"
          </p>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-10">
      <a
        href="https://g.page/r/YOUR_GOOGLE_REVIEW_LINK/review"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700 font-medium transition-colors"
      >
        <span>See All Reviews on Google</span>
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
  </div>
</section>

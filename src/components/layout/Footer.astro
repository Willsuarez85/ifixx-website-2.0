---
const currentYear = new Date().getFullYear();

const serviceLinks = [
  { href: '/services/kitchen-remodel', label: 'Kitchen Remodel' },
  { href: '/services/bathroom-remodel', label: 'Bathroom Remodel' },
  { href: '/services/painting', label: 'Painting & Drywall' },
  { href: '/services/plumbing', label: 'Plumbing' },
  { href: '/services/electrical', label: 'Electrical' },
  { href: '/services/carpentry', label: 'Carpentry' },
  { href: '/services/doors-windows', label: 'Doors & Windows' },
  { href: '/services/quick-fix', label: 'Quick Fix' }
];

const companyLinks = [
  { href: '/about', label: 'About Us' },
  { href: '/blog', label: 'Blog' },
  { href: '/service-areas', label: 'Service Areas' },
  { href: '/contact', label: 'Contact' }
];

const serviceAreas = [
  'Charlotte, NC',
  'Matthews, NC',
  'Waxhaw, NC',
  'Rock Hill, SC',
  'Pineville, NC',
  'Monroe, NC'
];

const phoneNumber = '(980) 391-6833';
const phoneHref = 'tel:+19803916833';

const socialLinks = [
  {
    name: 'Facebook',
    url: 'https://www.facebook.com/ifixxnc',
    icon: 'facebook'
  },
  {
    name: 'Instagram',
    url: 'https://www.instagram.com/ifixxnc/',
    icon: 'instagram'
  },
  {
    name: 'Google',
    url: 'https://share.google/etUzpmu9VuUzDVDZJ',
    icon: 'google'
  }
];
---

<footer class="bg-neutral-800 text-white border-t border-neutral-700">
  <!-- Main Footer -->
  <div class="container section">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 lg:gap-8">
      
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="inline-block mb-4">
          <span class="text-3xl font-bold font-heading text-white">iFixx</span>
        </a>
        <p class="text-neutral-400 mb-6 text-sm leading-relaxed">
          Family-owned contractors serving Charlotte, NC with expert craftsmanship and trusted service since 2021.
        </p>
        <a
          href={phoneHref}
          class="inline-flex items-center gap-2 text-primary-400 hover:text-primary-300 font-semibold transition-colors"
          data-event="phone_click"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          {phoneNumber}
        </a>

        <!-- Social Media Icons -->
        <div class="flex items-center gap-4 mt-4">
          {socialLinks.map((social) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full bg-neutral-700 hover:bg-primary-500 flex items-center justify-center transition-colors"
              title={`Follow iFixx on ${social.name}`}
            >
              {social.icon === 'facebook' && (
                <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              )}
              {social.icon === 'instagram' && (
                <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              {social.icon === 'google' && (
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none">
                  <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                  <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                  <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                  <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Services Column -->
      <div>
        <h4 class="text-white font-heading font-semibold text-lg mb-4">Services</h4>
        <ul class="space-y-3">
          {serviceLinks.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-neutral-400 hover:text-white transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Column -->
      <div>
        <h4 class="text-white font-heading font-semibold text-lg mb-4">Company</h4>
        <ul class="space-y-3">
          {companyLinks.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-neutral-400 hover:text-white transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Service Areas Column -->
      <div>
        <h4 class="text-white font-heading font-semibold text-lg mb-4">Service Areas</h4>
        <ul class="space-y-2">
          {serviceAreas.map((area) => (
            <li class="text-neutral-400 text-sm">{area}</li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-neutral-700">
    <div class="container py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-neutral-500 text-sm">
          Â© {currentYear} iFixx Remodeling & Handyman Services. All rights reserved.
        </p>
        <div class="flex items-center gap-6">
          <a href="/privacy" class="text-neutral-500 hover:text-white text-sm transition-colors">
            Privacy Policy
          </a>
          <a href="/terms" class="text-neutral-500 hover:text-white text-sm transition-colors">
            Terms of Service
          </a>
        </div>
      </div>
      <!-- Developer Credit -->
      <div class="text-center mt-4 pt-4 border-t border-neutral-700">
        <p class="text-neutral-500 text-xs">
          Developed by <a href="https://simplicityagency.com" target="_blank" rel="noopener noreferrer" class="text-primary-400 hover:text-primary-300 transition-colors">Simplicity Agency</a>
        </p>
      </div>
    </div>
  </div>
</footer>

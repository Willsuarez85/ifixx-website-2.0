---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import CTASection from '../../components/sections/CTASection.astro';

export async function getStaticPaths() {
  const services = await getCollection('services');
  const cities = await getCollection('cities');
  const cityServiceContent = await getCollection('city-service');

  const paths = [];

  for (const city of cities) {
    for (const service of services) {
      // Find unique content for this city+service combination (if exists)
      const uniqueContent = cityServiceContent.find(
        content => content.data.citySlug === city.slug && content.data.serviceSlug === service.slug
      );

      paths.push({
        params: {
          citySlug: city.slug,
          serviceSlug: service.slug
        },
        props: { city, service, uniqueContent: uniqueContent || null },
      });
    }
  }

  return paths;
}

interface Props {
  city: CollectionEntry<'cities'>;
  service: CollectionEntry<'services'>;
  uniqueContent: CollectionEntry<'city-service'> | null;
}

const { city, service, uniqueContent } = Astro.props;
const { Content: ServiceContent } = await service.render();

// Render unique content markdown body if exists
let UniqueContentBody = null;
if (uniqueContent) {
  const rendered = await uniqueContent.render();
  UniqueContentBody = rendered.Content;
}

const cityData = city.data;
const serviceData = service.data;
const localContent = uniqueContent?.data;

// Check if this page has unique content (for adding "local content" signal)
const hasUniqueContent = !!localContent;

const pageTitle = `${serviceData.title} in ${cityData.name}, ${cityData.state}`;

// Helper to get pillar URL for a service
const currentPillar = serviceData.pillar || 'repairs';
const pillarUrl = `/${currentPillar}/${service.slug}`;

// Pillar labels for breadcrumb
const pillarLabels: Record<string, string> = {
  'repairs': 'Repairs',
  'remodeling': 'Remodeling',
  'emergency-services': 'Emergency Services'
};
const pillarLabel = pillarLabels[currentPillar] || 'Services';

// SEO - use unique content SEO if available, otherwise generate
const seoTitle = localContent?.seo?.title || `${serviceData.title} in ${cityData.name}, ${cityData.state} | iFixx`;
const seoDescription = localContent?.seo?.description || `Professional ${serviceData.title.toLowerCase()} services in ${cityData.name}, ${cityData.state}. Serving ${cityData.neighborhoods?.slice(0, 3).join(', ')} & more. Fully insured, free estimates!`;

// Use local intro if available, otherwise city's generic intro
const introText = localContent?.localIntro || cityData.localizedIntro;

// Use local bullets if available, otherwise service bullets
const displayBullets = localContent?.localBullets || serviceData.bullets;

// Use local FAQs if available, otherwise service FAQs
const displayFaqs = localContent?.localFaqs || serviceData.faqs;

// Service + LocalBusiness schema (enhanced)
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": `${serviceData.title} in ${cityData.name}`,
  "description": seoDescription,
  "serviceType": serviceData.title,
  "url": `https://www.ifixxnc.com/${city.slug}/${service.slug}`,
  "provider": {
    "@type": "HomeAndConstructionBusiness",
    "@id": "https://www.ifixxnc.com/#business",
    "name": "iFixx Remodeling & Handyman Services",
    "url": "https://www.ifixxnc.com",
    "telephone": "+1-980-391-6833",
    "email": "ifixx.hs@gmail.com",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": cityData.name,
      "addressRegion": cityData.state,
      "addressCountry": "US"
    }
  },
  "areaServed": {
    "@type": "City",
    "name": cityData.name,
    "containedInPlace": {
      "@type": "State",
      "name": cityData.state === 'NC' ? 'North Carolina' : 'South Carolina'
    }
  },
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/InStock",
    "priceSpecification": {
      "@type": "PriceSpecification",
      "priceCurrency": "USD",
      "eligibleQuantity": {
        "@type": "QuantitativeValue",
        "value": 1
      }
    }
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5.0",
    "bestRating": "5",
    "worstRating": "1",
    "reviewCount": "87",
    "ratingCount": "87"
  }
};

// Breadcrumb schema (links to pillar-based URLs)
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://www.ifixxnc.com"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": pillarLabel,
      "item": `https://www.ifixxnc.com/${currentPillar}`
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": serviceData.title,
      "item": `https://www.ifixxnc.com${pillarUrl}`
    },
    {
      "@type": "ListItem",
      "position": 4,
      "name": `${serviceData.title} in ${cityData.name}`,
      "item": `https://www.ifixxnc.com/${city.slug}/${service.slug}`
    }
  ]
};

// FAQPage schema (for rich snippets) - use displayFaqs
const faqSchema = displayFaqs && displayFaqs.length > 0 ? {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": displayFaqs.map(faq => ({
    "@type": "Question",
    "name": faq.q,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.a
    }
  }))
} : null;

const categoryLabels: Record<string, string> = {
  emergency: 'Emergency Service',
  handyman: 'Handyman Service',
  remodeling: 'Remodeling Service'
};
---

<BaseLayout
  title={seoTitle}
  description={seoDescription}
  canonical={`/${city.slug}/${service.slug}`}
  geoRegion={`US-${cityData.state}`}
  geoPlacename={cityData.name}
>
  <Fragment slot="schema">
    <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
    {faqSchema && (
      <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
    )}
  </Fragment>

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-neutral-50 to-white py-16 lg:py-20">
    <div class="container">
      <!-- Breadcrumb -->
      <nav class="mb-6">
        <ol class="flex items-center gap-2 text-sm text-neutral-500 flex-wrap">
          <li><a href="/" class="hover:text-primary-600">Home</a></li>
          <li>/</li>
          <li><a href={`/${currentPillar}`} class="hover:text-primary-600">{pillarLabel}</a></li>
          <li>/</li>
          <li><a href={pillarUrl} class="hover:text-primary-600">{serviceData.title}</a></li>
          <li>/</li>
          <li class="text-neutral-900 font-medium">{cityData.name}</li>
        </ol>
      </nav>

      <div class="max-w-3xl">
        <!-- Category Badge -->
        <span class="inline-block px-3 py-1 bg-primary-100 text-primary-700 text-sm font-medium rounded-full mb-4">
          {categoryLabels[serviceData.category] || serviceData.category}
        </span>

        <h1 class="text-4xl lg:text-5xl font-heading font-bold text-neutral-900 mb-4">
          {pageTitle}
        </h1>

        <!-- Localized Intro (uses unique content if available) -->
        <p class="text-lg text-neutral-600 mb-8">
          {introText}
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/contact" class="btn btn-primary">
            Get Free Estimate in {cityData.name}
          </a>
          <a href="tel:+19803916833" class="btn btn-secondary" data-event="phone_click">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call Now
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Neighborhoods Served -->
  {cityData.neighborhoods && cityData.neighborhoods.length > 0 && (
    <section class="py-8 border-b border-neutral-100">
      <div class="container">
        <div class="flex flex-wrap items-center gap-2 justify-center">
          <span class="text-neutral-600 font-medium">Serving:</span>
          {cityData.neighborhoods.map((neighborhood, index) => (
            <>
              <span class="text-neutral-700">{neighborhood}</span>
              {index < cityData.neighborhoods!.length - 1 && (
                <span class="text-neutral-300">â€¢</span>
              )}
            </>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Service Details -->
  <section class="section">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Service Bullets (uses local bullets if available) -->
        <div>
          <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-6">
            {serviceData.title} Services in {cityData.name}
          </h2>

          {displayBullets && displayBullets.length > 0 && (
            <ul class="space-y-4 mb-8">
              {displayBullets.map((bullet) => (
                <li class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-secondary-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-neutral-700">{bullet}</span>
                </li>
              ))}
            </ul>
          )}
        </div>

        <!-- Content / Why Choose (uses unique content body if available) -->
        <div class="prose prose-neutral max-w-none">
          {hasUniqueContent && UniqueContentBody ? (
            <UniqueContentBody />
          ) : (
            <>
              <h3>Why {cityData.name} Homeowners Choose iFixx</h3>
              <ServiceContent />
              <p>
                We've been proudly serving {cityData.name} and the surrounding areas for over 5 years.
                Our team understands the unique needs of homes in this area, from older
                {cityData.neighborhoods?.[0] || 'historic'} properties to newer construction.
              </p>
            </>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Project Highlight (only if unique content has it) -->
  {localContent?.projectHighlight && (
    <section class="section section-alt">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-8 text-center">
            Featured {serviceData.title} Project in {localContent.projectHighlight.neighborhood}
          </h2>

          <div class="bg-white rounded-2xl shadow-sm p-8">
            <h3 class="text-xl font-heading font-semibold text-neutral-900 mb-4">
              {localContent.projectHighlight.title}
            </h3>
            <p class="text-neutral-600 leading-relaxed">
              {localContent.projectHighlight.description}
            </p>

            {(localContent.projectHighlight.beforeImage || localContent.projectHighlight.afterImage) && (
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-6">
                {localContent.projectHighlight.beforeImage && (
                  <div>
                    <p class="text-sm text-neutral-500 mb-2">Before</p>
                    <img
                      src={localContent.projectHighlight.beforeImage}
                      alt={`Before ${localContent.projectHighlight.title}`}
                      class="rounded-lg w-full"
                    />
                  </div>
                )}
                {localContent.projectHighlight.afterImage && (
                  <div>
                    <p class="text-sm text-neutral-500 mb-2">After</p>
                    <img
                      src={localContent.projectHighlight.afterImage}
                      alt={`After ${localContent.projectHighlight.title}`}
                      class="rounded-lg w-full"
                    />
                  </div>
                )}
              </div>
            )}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Local Info (permits, regulations - only if unique content has it) -->
  {localContent?.localInfo && (localContent.localInfo.permits || localContent.localInfo.regulations || localContent.localInfo.hoaConsiderations) && (
    <section class="section">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-8 text-center">
            {serviceData.title} Information for {cityData.name}
          </h2>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {localContent.localInfo.permits && (
              <div class="bg-neutral-50 rounded-xl p-6">
                <h3 class="text-lg font-heading font-semibold text-neutral-900 mb-3 flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  Permits
                </h3>
                <p class="text-neutral-600 text-sm">{localContent.localInfo.permits}</p>
              </div>
            )}

            {localContent.localInfo.regulations && (
              <div class="bg-neutral-50 rounded-xl p-6">
                <h3 class="text-lg font-heading font-semibold text-neutral-900 mb-3 flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                  Regulations
                </h3>
                <p class="text-neutral-600 text-sm">{localContent.localInfo.regulations}</p>
              </div>
            )}

            {localContent.localInfo.hoaConsiderations && (
              <div class="bg-neutral-50 rounded-xl p-6">
                <h3 class="text-lg font-heading font-semibold text-neutral-900 mb-3 flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                  </svg>
                  HOA Considerations
                </h3>
                <p class="text-neutral-600 text-sm">{localContent.localInfo.hoaConsiderations}</p>
              </div>
            )}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Process Steps (if available) -->
  {serviceData.processSteps && serviceData.processSteps.length > 0 && (
    <section class="section section-alt">
      <div class="container">
        <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-8 text-center">
          Our {serviceData.title} Process
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          {serviceData.processSteps.map((step, index) => (
            <div class="text-center">
              <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-primary-100 flex items-center justify-center">
                <span class="text-2xl font-heading font-bold text-primary-600">{index + 1}</span>
              </div>
              <h3 class="text-lg font-heading font-semibold text-neutral-900 mb-2">
                {step.title}
              </h3>
              <p class="text-neutral-600 text-sm">
                {step.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Local FAQs (uses local FAQs if available, otherwise service FAQs) -->
  {displayFaqs && displayFaqs.length > 0 && (
    <section class="section">
      <div class="container">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-8 text-center">
            {serviceData.title} FAQs for {cityData.name}
          </h2>

          <div class="space-y-4">
            {displayFaqs.map((faq) => (
              <details class="group bg-neutral-50 rounded-xl p-6">
                <summary class="flex items-center justify-between cursor-pointer list-none">
                  <span class="font-semibold text-neutral-900 pr-4">{faq.q}</span>
                  <svg class="w-5 h-5 text-neutral-500 group-open:rotate-180 transition-transform flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </summary>
                <p class="mt-4 text-neutral-600 leading-relaxed">
                  {faq.a}
                </p>
              </details>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Final CTA -->
  <CTASection
    headline={`Ready for ${serviceData.title} in ${cityData.name}?`}
    subtext={`Get a free estimate from ${cityData.name}'s trusted handyman team.`}
  />
</BaseLayout>

---
import BaseLayout from '../layouts/BaseLayout.astro';

const seoTitle = "Service Areas | iFixx Remodeling & Handyman Services";
const seoDescription = "iFixx serves Charlotte, NC and surrounding areas including Matthews, Waxhaw, Rock Hill, Pineville, and Monroe. Professional home repair and remodeling services.";

const serviceAreas = [
  {
    name: "Charlotte, NC",
    description: "Serving all neighborhoods including South Charlotte, Dilworth, Myers Park, Plaza Midwood, NoDa, and Ballantyne",
  },
  {
    name: "Matthews, NC",
    description: "Full service coverage throughout Matthews and surrounding communities",
  },
  {
    name: "Waxhaw, NC",
    description: "Professional home services for Waxhaw residents",
  },
  {
    name: "Rock Hill, SC",
    description: "Extending quality service across the state line to Rock Hill",
  },
  {
    name: "Pineville, NC",
    description: "Reliable handyman and remodeling services in Pineville",
  },
  {
    name: "Monroe, NC",
    description: "Expert home repair and renovation in Monroe and nearby areas",
  },
];
---

<BaseLayout title={seoTitle} description={seoDescription} canonical="/service-areas">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-neutral-50 to-white py-16 lg:py-20">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl lg:text-5xl font-heading font-bold text-neutral-900 mb-6">
          Areas We Serve
        </h1>
        <p class="text-lg lg:text-xl text-neutral-600 leading-relaxed">
          Professional home repair and remodeling services throughout Charlotte, NC and surrounding communities.
        </p>
      </div>
    </div>
  </section>

  <!-- Service Areas Grid -->
  <section class="section">
    <div class="container">
      <div class="max-w-5xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {serviceAreas.map((area) => (
            <div class="card p-6 hover:border-primary-500">
              <div class="flex items-start gap-3 mb-3">
                <svg class="w-6 h-6 text-secondary-600 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <h3 class="text-xl font-heading font-bold text-neutral-900">
                  {area.name}
                </h3>
              </div>
              <p class="text-neutral-600 text-sm">
                {area.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Neighborhoods -->
  <section class="section bg-neutral-100">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-heading font-bold text-neutral-900 mb-8 text-center">
          Charlotte Area Neighborhoods We Serve
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
          <div class="bg-white p-4 rounded-lg text-center text-neutral-700 font-medium">
            South Charlotte
          </div>
          <div class="bg-white p-4 rounded-lg text-center text-neutral-700 font-medium">
            Dilworth
          </div>
          <div class="bg-white p-4 rounded-lg text-center text-neutral-700 font-medium">
            Myers Park
          </div>
          <div class="bg-white p-4 rounded-lg text-center text-neutral-700 font-medium">
            Plaza Midwood
          </div>
          <div class="bg-white p-4 rounded-lg text-center text-neutral-700 font-medium">
            NoDa
          </div>
          <div class="bg-white p-4 rounded-lg text-center text-neutral-700 font-medium">
            Ballantyne
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Offered -->
  <section class="section">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-heading font-bold text-neutral-900 mb-6">
          Services Available in All Areas
        </h2>
        <p class="text-lg text-neutral-600 mb-8">
          No matter where you're located in our service area, we offer the full range of home repair and remodeling services.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-left">
          <div class="flex items-start gap-3 p-4 bg-neutral-50 rounded-lg">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <div>
              <p class="font-semibold text-neutral-900">General Handyman Services</p>
              <p class="text-sm text-neutral-600">Repairs, maintenance, and small projects</p>
            </div>
          </div>

          <div class="flex items-start gap-3 p-4 bg-neutral-50 rounded-lg">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <div>
              <p class="font-semibold text-neutral-900">Home Remodeling</p>
              <p class="text-sm text-neutral-600">Kitchen, bathroom, and room renovations</p>
            </div>
          </div>

          <div class="flex items-start gap-3 p-4 bg-neutral-50 rounded-lg">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <div>
              <p class="font-semibold text-neutral-900">Electrical & Plumbing</p>
              <p class="text-sm text-neutral-600">Professional work for your safety</p>
            </div>
          </div>

          <div class="flex items-start gap-3 p-4 bg-neutral-50 rounded-lg">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <div>
              <p class="font-semibold text-neutral-900">Painting & Drywall</p>
              <p class="text-sm text-neutral-600">Interior and exterior painting</p>
            </div>
          </div>

          <div class="flex items-start gap-3 p-4 bg-neutral-50 rounded-lg">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <div>
              <p class="font-semibold text-neutral-900">Carpentry & Trim Work</p>
              <p class="text-sm text-neutral-600">Custom woodworking and installations</p>
            </div>
          </div>

          <div class="flex items-start gap-3 p-4 bg-neutral-50 rounded-lg">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <div>
              <p class="font-semibold text-neutral-900">Emergency Repairs</p>
              <p class="text-sm text-neutral-600">Fast response when you need it</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gradient-to-br from-primary-50 to-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-heading font-bold text-neutral-900 mb-4">
          Serving Your Neighborhood
        </h2>
        <p class="text-lg text-neutral-600 mb-8">
          Not sure if we service your area? Contact us to find out. We're always looking to help more homeowners in the Charlotte region.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn btn-primary text-lg px-8 py-4">
            Request Free Estimate
          </a>
          <a href="tel:+19803916833" class="btn btn-secondary text-lg px-8 py-4" data-event="phone_click">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            (980) 391-6833
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

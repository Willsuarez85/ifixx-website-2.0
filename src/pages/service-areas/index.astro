---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const seoTitle = "Service Areas | iFixx Remodeling & Handyman Services";
const seoDescription = "iFixx serves Charlotte, NC and surrounding areas including Ballantyne, Matthews, Waxhaw, Rock Hill, Pineville, Mint Hill, and Monroe. Professional home repair and remodeling services.";

// Get all cities from content collection
const cities = await getCollection('cities');

// Sort: Charlotte first, then alphabetically
const sortedCities = cities.sort((a, b) => {
  if (a.slug === 'charlotte') return -1;
  if (b.slug === 'charlotte') return 1;
  return a.data.name.localeCompare(b.data.name);
});

// ItemList schema for SEO
const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "iFixx Service Areas",
  "description": "Cities and neighborhoods served by iFixx Remodeling & Handyman Services",
  "numberOfItems": sortedCities.length,
  "itemListElement": sortedCities.map((city, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": `${city.data.name}, ${city.data.state}`,
    "url": `https://ifixxnc.com/service-areas/${city.slug}`
  }))
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://ifixxnc.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Service Areas",
      "item": "https://ifixxnc.com/service-areas"
    }
  ]
};
---

<BaseLayout title={seoTitle} description={seoDescription} canonical="/service-areas">
  <Fragment slot="schema">
    <script type="application/ld+json" set:html={JSON.stringify(itemListSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  </Fragment>

  <!-- Hero Section -->
  <section class="relative bg-neutral-900 py-16 lg:py-20 overflow-hidden">
    <div class="absolute inset-0">
      <img
        src="/images/projects/remodeling-modern-home-exterior-curb-appeal.webp"
        alt="Modern home exterior with great curb appeal"
        class="w-full h-full object-cover opacity-35"
        loading="eager"
        decoding="async"
      />
    </div>
    <div class="absolute inset-0 bg-gradient-to-br from-neutral-900/80 via-neutral-900/60 to-primary-600/30"></div>
    <div class="container relative">
      <div class="max-w-3xl mx-auto text-center">
        <!-- Breadcrumb -->
        <nav class="flex items-center justify-center gap-2 text-sm text-neutral-400 mb-6">
          <a href="/" class="hover:text-white transition-colors">Home</a>
          <span>/</span>
          <span class="text-primary-400">Service Areas</span>
        </nav>

        <h1 class="text-4xl lg:text-5xl font-heading font-bold text-white mb-6">
          Areas We Serve
        </h1>
        <p class="text-lg lg:text-xl text-neutral-200 leading-relaxed">
          Professional home repair and remodeling services throughout Charlotte, NC and surrounding communities. Click any location to see available services.
        </p>
      </div>
    </div>
  </section>

  <!-- Service Areas Grid -->
  <section class="section">
    <div class="container">
      <div class="max-w-5xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {sortedCities.map((city) => (
            <a
              href={`/service-areas/${city.slug}`}
              class="card p-6 hover:border-primary-500 group"
            >
              <div class="flex items-start gap-3 mb-3">
                <svg class="w-6 h-6 text-secondary-600 flex-shrink-0 mt-1 group-hover:text-primary-600 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <div>
                  <h2 class="text-xl font-heading font-bold text-neutral-900 group-hover:text-primary-600 transition-colors">
                    {city.data.name}, {city.data.state}
                  </h2>
                  {city.data.type === 'neighborhood' && (
                    <span class="inline-block text-xs bg-secondary-100 text-secondary-700 px-2 py-0.5 rounded mt-1">
                      Charlotte Neighborhood
                    </span>
                  )}
                </div>
              </div>
              <p class="text-neutral-600 text-sm mb-4">
                {city.data.neighborhoods?.slice(0, 3).join(', ')}{city.data.neighborhoods && city.data.neighborhoods.length > 3 ? ' & more' : ''}
              </p>
              <span class="text-primary-600 font-medium text-sm flex items-center gap-1 group-hover:gap-2 transition-all">
                View services
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Neighborhoods -->
  <section class="section bg-neutral-100">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-heading font-bold text-neutral-900 mb-8 text-center">
          Charlotte Area Neighborhoods We Serve
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TrustBar from '../../components/sections/TrustBar.astro';
import CTASection from '../../components/sections/CTASection.astro';
import QuickEstimateCompact from '../../components/forms/QuickEstimateCompact.astro';
import { getCollection } from 'astro:content';

const locations = await getCollection('cities');

const seo = {
  title: "Outlet & Switch Repair Charlotte NC | Dead Outlets Fixed Same-Day | iFIXX",
  description: "Dead outlet? Flickering switch? Ceiling fan not working? Same-day fixture repairs in Charlotte. Call Jaime or Hamed directly: (980) 391-6833"
};

const heroImage = "/images/projects/electrical-pendant-light-fixture-installation-kitchen.webp";
const projectImage = "/images/projects/electrical-under-cabinet-lighting-wiring-kitchen.webp";

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Outlet and Switch Repair Charlotte NC",
  "description": seo.description,
  "provider": {
    "@type": "LocalBusiness",
    "name": "iFIXX Services",
    "telephone": "(980) 391-6833"
  },
  "areaServed": { "@type": "City", "name": "Charlotte", "addressRegion": "NC" }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Why did my outlet suddenly stop working?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Common causes include a tripped GFCI outlet somewhere else on the circuit, a loose wire connection, or a worn-out receptacle. We diagnose the exact cause and fix it."
      }
    },
    {
      "@type": "Question",
      "name": "Can you install a dimmer switch?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! Dimmer switches are a simple upgrade that can change the feel of a room. We can swap out a standard switch for a dimmer in one visit."
      }
    },
    {
      "@type": "Question",
      "name": "My ceiling fan won't turn on. Can you help?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Absolutely. Ceiling fan issues often come down to the switch, the pull chain, or the fan's internal components. We troubleshoot and repair on-site."
      }
    }
  ]
};

const bullets = [
  "Dead outlets that stopped working",
  "Switches that don't respond",
  "Ceiling fan repairs",
  "GFCI outlet resets and replacements",
  "Dimmer switch installation",
  "Outdoor lighting fixes"
];

const faqs = [
  {
    q: "Why did my outlet suddenly stop working?",
    a: "Common causes include a tripped GFCI outlet somewhere else on the circuit, a loose wire connection, or a worn-out receptacle. We diagnose the exact cause and fix it."
  },
  {
    q: "What's a GFCI outlet and why does it need resetting?",
    a: "GFCI outlets have built-in protection that trips when moisture or a ground fault is detected‚Äîcommon in bathrooms and kitchens. Sometimes they just need a reset; other times they need replacement."
  },
  {
    q: "Can you install a dimmer switch?",
    a: "Yes! Dimmer switches are a simple upgrade that can change the feel of a room. We can swap out a standard switch for a dimmer in one visit."
  },
  {
    q: "My ceiling fan won't turn on. Can you help?",
    a: "Absolutely. Ceiling fan issues often come down to the switch, the pull chain, or the fan's internal components. We troubleshoot and repair on-site."
  },
  {
    q: "Are you insured?",
    a: "Yes, iFIXX is fully insured. We take care of your home like it's our own."
  }
];
---


---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const locations = await getCollection('cities');

const seo = {
  title: "Door Repair Charlotte NC | Emergency Door & Window Fix | iFIXX",
  description: "Door won't lock? Window broken? Same-day emergency door and window repair in Charlotte. We secure your home fast. Call Jaime or Hamed: (980) 391-6833"
};

const schemaData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Door and Window Repair Charlotte NC",
  "provider": {
    "@type": "LocalBusiness",
    "name": "iFIXX Services",
    "telephone": "(980) 391-6833"
  },
  "description": "Same-day door repair, window repair, and security fixes in Charlotte, NC.",
  "areaServed": { "@type": "City", "name": "Charlotte", "addressRegion": "NC" }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Can you fix a door that won't close properly?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! Doors that stick, don't latch, or won't close are common fixes. Usually it's the hinges, strike plate, or frame - all things we can repair same-day."
      }
    },
    {
      "@type": "Question",
      "name": "Do you board up broken windows?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. We can board up a broken window same-day to secure your home, then help with permanent repair or coordinate with a glass company for replacement."
      }
    }
  ]
};
---

<BaseLayout title={seo.title} description={seo.description}>
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <!-- Hero -->
  <section class="relative bg-orange-900 py-20 lg:py-28">

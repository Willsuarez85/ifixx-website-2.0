---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TrustBar from '../../components/sections/TrustBar.astro';
import CTASection from '../../components/sections/CTASection.astro';
import QuickEstimateCompact from '../../components/forms/QuickEstimateCompact.astro';
import { getCollection } from 'astro:content';

const locations = await getCollection('cities');

const seo = {
  title: "Door Repair Charlotte NC | Emergency Door & Window Fix | iFIXX",
  description: "Door won't lock? Window broken? Same-day emergency door and window repair in Charlotte. We secure your home fast. Call Jaime or Hamed: (980) 391-6833"
};

const heroImage = "/images/projects/door-installation-interior-hinge-leveling-brass.webp";
const projectImage = "/images/projects/construction-wood-framing-window.webp";

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Door and Window Repair Charlotte NC",
  "description": seo.description,
  "provider": {
    "@type": "LocalBusiness",
    "name": "iFIXX Services",
    "telephone": "(980) 391-6833"
  },
  "areaServed": { "@type": "City", "name": "Charlotte", "addressRegion": "NC" }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Can you fix a door that won't close properly?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! Doors that stick, don't latch, or won't close are common fixes. Usually it's the hinges, strike plate, or frame - all things we can repair same-day."
      }
    },
    {
      "@type": "Question",
      "name": "Do you board up broken windows?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. We can board up a broken window same-day to secure your home, then help with permanent repair or coordinate with a glass company for replacement."
      }
    }
  ]
};

const bullets = [
  "Door won't close or latch properly",
  "Sticking or dragging doors",
  "Door frame repairs",
  "Lock replacement & deadbolt installation",
  "Broken window board-up",
  "Window won't open or close"
];

const faqs = [
  {
    q: "Can you fix a door that won't close properly?",
    a: "Yes! Doors that stick, don't latch, or won't close are common fixes for us. Usually it's the hinges, strike plate, or frame â€” all things we can repair same-day."
  },
  {
    q: "Do you board up broken windows?",
    a: "Yes. We can board up a broken window same-day to secure your home and keep weather out. Then we can help with permanent repair or coordinate with a glass company for replacement."
  },
  {
    q: "How much does door repair cost?",
    a: "Simple adjustments (hinges, strike plate): $75-150. Door frame repair: $150-300+. Lock replacement: $75-200. We always quote before starting work."
  },
  {
    q: "Can you help after a break-in?",
    a: "Absolutely. We repair kicked-in door frames, replace damaged locks, and restore your door's security. We understand this is stressful â€” we respond quickly."
  },
  {
    q: "Do you replace glass in windows?",
    a: "We can handle some window repairs, but for glass replacement on large windows, you'll need a glass company. We can board up the window to secure it while you wait for glass replacement."
  }
];

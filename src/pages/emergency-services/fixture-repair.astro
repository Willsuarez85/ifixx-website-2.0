};

const schemaData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Faucet and Fixture Repair Charlotte NC",
  "provider": {
    "@type": "LocalBusiness",
    "name": "iFIXX Services",
    "telephone": "(980) 391-6833"
  },
  "description": "Same-day faucet repair, toilet repair, and fixture replacement in Charlotte, NC.",
  "areaServed": { "@type": "City", "name": "Charlotte", "addressRegion": "NC" }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Can you fix a leaky faucet same-day?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! Leaky faucet repairs are one of our most common same-day jobs. Call or text us and we can usually get there within a few hours."
      }
    },
    {
      "@type": "Question",
      "name": "Do I need a plumber for a dripping faucet?",

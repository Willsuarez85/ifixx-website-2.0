---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TrustBar from '../../components/sections/TrustBar.astro';
import CTASection from '../../components/sections/CTASection.astro';
import QuickEstimateCompact from '../../components/forms/QuickEstimateCompact.astro';
import { getCollection } from 'astro:content';

const locations = await getCollection('cities');

const seo = {
  title: "Faucet Repair Charlotte NC | Leaky Faucet Fix | Same-Day | iFIXX",
  description: "Leaky faucet? Running toilet? Same-day fixture repairs in Charlotte. No plumber needed for simple fixes. Call Jaime or Hamed: (980) 391-6833"
};

const heroImage = "/images/projects/plumbing-bathroom-faucet-installation-repair.webp";
const projectImage = "/images/projects/plumbing-water-heater-valve-repair-wrench.webp";

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Faucet and Fixture Repair Charlotte NC",
  "description": seo.description,
  "provider": {
    "@type": "LocalBusiness",
    "name": "iFIXX Services",
    "telephone": "(980) 391-6833"
  },
  "areaServed": { "@type": "City", "name": "Charlotte", "addressRegion": "NC" }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Can you fix a leaky faucet same-day?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! Leaky faucet repairs are one of our most common same-day jobs. Call or text us and we can usually get there within a few hours."
      }
    },
    {
      "@type": "Question",
      "name": "Do I need a plumber for a dripping faucet?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Not usually. Faucet replacements, washer changes, and cartridge swaps don't require a plumber. We handle these as handyman repairs - faster and often less expensive."
      }
    },
    {
      "@type": "Question",
      "name": "How much does faucet repair cost in Charlotte?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Simple repairs like washer replacement: $50-100. Full faucet replacement: $150-300+ depending on the faucet. We always quote before starting work."
      }
    }
  ]
};

const bullets = [
  "Leaky faucet repair",
  "Faucet replacement (kitchen & bath)",
  "Running toilet repair",
  "Toilet parts replacement",
  "Shower head replacement",
  "Simple drain clearing"
];

const faqs = [
  {
    q: "Can you fix a leaky faucet same-day?",
    a: "Yes! Leaky faucet repairs are one of our most common same-day jobs. Call or text us and we can usually get there within a few hours."
  },
  {
    q: "Do I need a plumber for a dripping faucet?",
    a: "Usually not. Faucet repairs and replacements are handyman work. We swap faucets, replace cartridges, and fix drips without needing a licensed plumber ‚Äî faster and often less expensive."
  },
  {
    q: "How much does faucet repair cost in Charlotte?",
    a: "Simple repairs like washer or cartridge replacement: $50-100. Full faucet replacement: $150-300+ depending on the faucet you choose. We always quote before starting work ‚Äî no surprises."
  },
  {
    q: "Can you fix a toilet that keeps running?",
    a: "Absolutely. Running toilets are usually a flapper, fill valve, or chain issue ‚Äî quick fixes we do all the time. Typically $50-100 to fix."
  },
  {
    q: "Do you supply the faucet or do I buy it?",
    a: "Either way works. We can pick one up for you, or you can buy the faucet you want and we'll install it. Just let us know what you prefer."
  }
];
---

<BaseLayout title={seo.title} description={seo.description} canonical="/emergency-services/fixture-repair">
  <Fragment slot="schema">
    <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  </Fragment>

  <!-- Hero Section -->
  <section class="relative bg-neutral-900 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img
        src={heroImage}
        alt="Faucet repair in Charlotte NC"
        class="w-full h-full object-cover"
        width="1920"
        height="1080"
        fetchpriority="high"
        decoding="async"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-neutral-900/95 via-neutral-900/85 to-neutral-900/60"></div>
    </div>

    <div class="container relative z-10">
      <div class="py-12 lg:py-20">
        <!-- Breadcrumb -->
        <nav class="mb-6">
          <ol class="flex items-center gap-2 text-sm text-neutral-300">
            <li><a href="/" class="hover:text-primary-500 transition-colors">Home</a></li>
            <li class="text-neutral-500">/</li>
            <li><a href="/emergency-services" class="hover:text-primary-500 transition-colors">Emergency Services</a></li>
            <li class="text-neutral-500">/</li>
            <li class="text-white font-medium">Fixture Repair</li>
          </ol>
        </nav>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-start">
          <!-- Content Side -->
          <div class="order-2 lg:order-1">
            <span class="inline-block px-4 py-2 bg-primary-500 text-neutral-900 text-sm font-bold rounded-full mb-4">
              Same-Day Service
            </span>

            <h1 class="text-3xl lg:text-4xl xl:text-5xl font-heading font-bold text-white mb-4">
              Faucet & Fixture Repair in Charlotte, NC
            </h1>

            <p class="text-lg text-neutral-200 mb-6 max-w-xl">
              Leaky faucet driving you crazy? Toilet won't stop running? We fix it same-day ‚Äî no plumber needed for simple repairs.
            </p>

            <!-- Benefit Icons -->
            <div class="grid grid-cols-2 gap-4 mb-8">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Same-Day Repairs</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Often Cheaper</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Talk to Owners</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Fully Insured</span>
              </div>
            </div>

            <!-- Phone CTA -->
            <a href="tel:+19803916833" class="inline-flex items-center gap-3 text-white hover:text-primary-400 transition-colors">
              <div class="w-12 h-12 rounded-full bg-primary-500 flex items-center justify-center">
                <svg class="w-6 h-6 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-neutral-400">Call us now</p>
                <p class="text-xl font-heading font-bold">(980) 391-6833</p>
              </div>
            </a>
          </div>

          <!-- Form Side -->
          <div class="order-1 lg:order-2">
            <QuickEstimateCompact
              serviceSlug="fixture-repair"
              serviceTitle="Faucet & Fixture Repair"
              formId="hero-estimate-fixture-repair"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar -->
  <TrustBar variant="light" />

  <!-- What We Fix -->
  <section class="section">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-6">
            Fixture Repairs We Handle Same-Day
          </h2>
          <p class="text-neutral-600 mb-6">These common problems don't need a plumber. We fix them fast.</p>
          
          <ul class="space-y-4 mb-8">
            {bullets.map((bullet) => (
              <li class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-full bg-primary-500 flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <span class="text-neutral-700">{bullet}</span>
              </li>
            ))}
          </ul>

          <div class="bg-neutral-100 p-6 rounded-xl">
            <h3 class="font-heading font-bold text-neutral-900 mb-2">üí° Typical Pricing</h3>
            <ul class="text-sm text-neutral-600 space-y-1">
              <li>‚Ä¢ Simple faucet repair: $50-100</li>
              <li>‚Ä¢ Faucet replacement: $150-300</li>
              <li>‚Ä¢ Running toilet fix: $50-100</li>
              <li>‚Ä¢ Shower head swap: $50-75</li>
            </ul>
          </div>
        </div>

        <div class="relative">
          <div class="rounded-2xl overflow-hidden shadow-2xl">
            <img
              src={projectImage}
              alt="Faucet repair by iFIXX in Charlotte"
              class="w-full h-auto object-cover aspect-[4/3]"
              width="600"
              height="450"
              loading="lazy"
              decoding="async"
            />
          </div>
          <div class="absolute -bottom-4 -right-4 bg-white rounded-xl shadow-xl p-4 hidden lg:block">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full bg-primary-500 flex items-center justify-center">
                <svg class="w-5 h-5 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <p class="font-heading font-bold text-neutral-900 text-sm">No Plumber</p>
                <p class="text-xs text-neutral-600">Needed for Simple Fixes</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- What Needs a Specialist -->
  <section class="py-12 bg-amber-50 border-y border-amber-200">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h3 class="text-xl font-heading font-bold text-amber-800 mb-4">
          ‚ö†Ô∏è When You Need a Licensed Plumber
        </h3>
        <p class="text-amber-700 mb-4">
          We're handymen, not plumbers. For these jobs, call a licensed professional:
        </p>
        <div class="flex flex-wrap justify-center gap-3">
          <span class="bg-amber-100 text-amber-800 px-4 py-2 rounded-full text-sm font-medium">Pipes inside walls</span>
          <span class="bg-amber-100 text-amber-800 px-4 py-2 rounded-full text-sm font-medium">Water heater install</span>
          <span class="bg-amber-100 text-amber-800 px-4 py-2 rounded-full text-sm font-medium">New plumbing lines</span>
          <span class="bg-amber-100 text-amber-800 px-4 py-2 rounded-full text-sm font-medium">Sewer issues</span>
        </div>
        <p class="text-amber-700 mt-4 text-sm">
          Not sure? Text us a photo ‚Äî we'll tell you honestly if we can help or if you need a plumber.
        </p>
      </div>
    </div>
  </section>

  <!-- Why Us vs Plumber -->
  <section class="section bg-neutral-900 text-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl lg:text-3xl font-heading font-bold text-center mb-12">
          Why Call Us Instead of a Plumber?
        </h2>

        <div class="grid md:grid-cols-3 gap-8 text-center">
          <div>
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="font-heading font-bold text-xl mb-2">Faster Response</h3>
            <p class="text-neutral-400">Plumbers are often booked days out. We can usually come same-day.</p>
          </div>
          <div>
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-heading font-bold text-xl mb-2">Often Cheaper</h3>
            <p class="text-neutral-400">No plumber service call fees for simple fixture swaps.</p>
          </div>
          <div>
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-heading font-bold text-xl mb-2">Honest</h3>
            <p class="text-neutral-400">If you actually need a plumber, we'll tell you and can recommend one.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-8 text-center">
          Faucet & Fixture Repair FAQs
        </h2>
        
        <div class="space-y-4">
          {faqs.map((faq) => (
            <div class="bg-neutral-50 p-6 rounded-xl border border-neutral-200">
              <h3 class="font-heading font-bold text-lg text-neutral-900 mb-2">{faq.q}</h3>
              <p class="text-neutral-600">{faq.a}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="py-12 bg-neutral-100">
    <div class="container">
      <div class="text-center max-w-2xl mx-auto mb-8">
        <h2 class="text-xl font-heading font-bold text-neutral-900 mb-2">
          Faucet Repair Service Areas
        </h2>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-3 max-w-4xl mx-auto">
        {locations.slice(0, 12).map((location) => (
          <a
            href={`/service-areas/${location.slug}`}
            class="bg-white p-3 rounded-lg text-center hover:bg-primary-50 hover:border-primary-200 border border-neutral-200 transition-colors text-sm"
          >
            <span class="font-medium text-neutral-900">{location.data.name}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <CTASection />
</BaseLayout>

---
import PillarLayout from '../../layouts/PillarLayout.astro';
import { getCollection } from 'astro:content';

// Get all services with category 'emergency'
const allServices = await getCollection('services');
const emergencyServices = allServices.filter(s => s.data.category === 'emergency');

// Get all locations for internal linking
const locations = await getCollection('cities');

const pillar = {
  title: "24/7 Emergency Services",
  slug: "emergency-services",
  description: "24/7 emergency home repair services in Charlotte, NC. Burst pipes, electrical failures, storm damage - we respond fast when you need us most.",
  seo: {
    title: "24/7 Emergency Home Repair Services in Charlotte, NC | iFixx",
    description: "Emergency home repairs available 24/7 in Charlotte. Burst pipes, electrical emergencies, storm damage, flooding. Fast response. Call (980) 391-6833 now!"
  }
};

// Define emergency services (will be expanded in Sprint 3)
const plannedServices = [
  {
    name: "Emergency Plumbing",
    slug: "emergency-plumbing",
    description: "Burst pipes, major leaks, flooding, sewer backups, and water heater failures. Immediate response 24/7.",
    image: "/images/projects/Ifixx-portfolio15.webp"
  },
  {
    name: "Emergency Electrical",
    slug: "emergency-electrical",
    description: "Power outages, electrical fires, sparking outlets, and panel failures. Professional electricians on call.",
    image: "/images/projects/Ifixx-portfolio22.webp"
  },
  {
    name: "Storm Damage Repair",
    slug: "storm-damage",
    description: "Roof leaks, fallen trees, broken windows, and water intrusion after severe weather.",
    image: "/images/projects/Ifixx-portfolio30.webp"
  },
  {
    name: "24/7 Urgent Repairs",
    slug: "urgent-repairs",
    description: "Any urgent home repair that can't wait. We assess, stabilize, and repair quickly.",
    image: "/images/projects/Ifixx-portfolio42.webp"
  }
];

// Use actual services if they exist, otherwise use planned services
const services = emergencyServices.length > 0
  ? emergencyServices.map(s => ({
      name: s.data.title,
      slug: s.slug,
      description: s.data.summary,
      image: s.data.heroImage
    }))
  : plannedServices;
---

<PillarLayout pillar={pillar} services={services}>
  <!-- Emergency Hero Section -->
  <section class="relative bg-red-900 py-20 lg:py-28">
    <div class="absolute inset-0">
      <img
        src="/images/projects/emergency-plumbing-leaking-pipe-water-damage.webp"
        alt="Emergency plumbing repair - leaking pipe"
        class="w-full h-full object-cover opacity-25"
        loading="eager"
        decoding="async"
      />
    </div>
    <div class="absolute inset-0 bg-gradient-to-br from-red-900/90 via-red-800/80 to-red-950/90"></div>
    <div class="container relative">
      <div class="max-w-3xl">
        <!-- Emergency Badge -->
        <div class="inline-flex items-center gap-2 bg-red-500 text-white px-4 py-2 rounded-full text-sm font-bold mb-6 animate-pulse">
          <span class="w-2 h-2 bg-white rounded-full"></span>
          24/7 EMERGENCY RESPONSE
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          Home Emergency? <br/>
          <span class="text-red-300">We're Here 24/7</span>
        </h1>
        <p class="text-xl text-red-100 mb-8 leading-relaxed">
          Burst pipe? Electrical emergency? Storm damage?
          Don't wait - call now and we'll be there fast.
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="tel:+19803916833"
            class="btn bg-white text-red-700 hover:bg-red-50 text-xl px-10 py-5 font-bold shadow-xl"
          >
            <svg class="w-6 h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call (980) 391-6833
          </a>
          <a href="/contact" class="btn border-2 border-white text-white hover:bg-white/10 text-lg px-8 py-5">
            Request Callback
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Response Guarantee -->
  <section class="bg-neutral-900 py-8">
    <div class="container">
      <div class="grid md:grid-cols-3 gap-6 text-center">
        <div class="flex items-center justify-center gap-3">
          <svg class="w-8 h-8 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div class="text-left">
            <p class="text-white font-bold">Fast Response</p>
            <p class="text-neutral-400 text-sm">Quick arrival times</p>
          </div>
        </div>
        <div class="flex items-center justify-center gap-3">
          <svg class="w-8 h-8 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          <div class="text-left">
            <p class="text-white font-bold">Fully Insured</p>
            <p class="text-neutral-400 text-sm">Full protection for you</p>
          </div>
        </div>
        <div class="flex items-center justify-center gap-3">
          <svg class="w-8 h-8 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          <div class="text-left">
            <p class="text-white font-bold">Upfront Pricing</p>
            <p class="text-neutral-400 text-sm">No surprise fees</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Services Grid -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">
          Emergency Services We Handle
        </h2>
        <p class="text-lg text-neutral-600">
          When disaster strikes, we have the skills and equipment to help immediately.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {services.map((service) => (
          <div class="group bg-neutral-50 rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 border-l-4 border-red-500">
            <div class="grid md:grid-cols-5">
              <div class="md:col-span-2 aspect-video md:aspect-auto overflow-hidden">
                <img
                  src={service.image}
                  alt={`${service.name} in Charlotte, NC`}
                  class="w-full h-full object-cover"
                  loading="lazy"
                  decoding="async"
                  width="300"
                  height="200"
                />
              </div>
              <div class="md:col-span-3 p-6 flex flex-col justify-center">
                <h3 class="text-xl font-bold text-neutral-900 mb-2">
                  {service.name}
                </h3>
                <p class="text-neutral-600 text-sm mb-4">
                  {service.description}
                </p>
                <a
                  href="tel:+19803916833"
                  class="inline-flex items-center text-red-600 font-bold hover:text-red-700 transition-colors"
                >
                  <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  Call Now
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- What To Do Section -->
  <section class="py-16 lg:py-24 bg-neutral-900 text-white">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            What To Do in a Home Emergency
          </h2>

          <div class="space-y-6">
            <div class="flex gap-4">
              <div class="w-10 h-10 bg-red-500 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-white font-bold">1</span>
              </div>
              <div>
                <h3 class="font-bold text-white mb-1">Stay Calm & Safe</h3>
                <p class="text-neutral-400">Ensure you and your family are out of immediate danger. Evacuate if necessary.</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="w-10 h-10 bg-red-500 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-white font-bold">2</span>
              </div>
              <div>
                <h3 class="font-bold text-white mb-1">Shut Off Utilities</h3>
                <p class="text-neutral-400">For water emergencies, shut off the main water valve. For electrical, switch off the breaker if safe.</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="w-10 h-10 bg-red-500 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-white font-bold">3</span>
              </div>
              <div>
                <h3 class="font-bold text-white mb-1">Call iFixx</h3>
                <p class="text-neutral-400">Call us immediately at (980) 391-6833. We'll dispatch a technician right away.</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="w-10 h-10 bg-red-500 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-white font-bold">4</span>
              </div>
              <div>
                <h3 class="font-bold text-white mb-1">Document Damage</h3>
                <p class="text-neutral-400">Take photos for insurance purposes while waiting for our team to arrive.</p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-red-800 p-8 rounded-2xl text-center">
          <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">Emergency Hotline</h3>
          <p class="text-red-200 mb-6">Available 24 hours a day, 7 days a week</p>
          <a
            href="tel:+19803916833"
            class="btn bg-white text-red-700 hover:bg-red-50 text-2xl px-10 py-4 font-bold w-full justify-center"
          >
            (980) 391-6833
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">
          Emergency Service Areas
        </h2>
        <p class="text-lg text-neutral-600">
          We respond to emergencies throughout the greater Charlotte area.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {locations.map((location) => (
          <a
            href={`/service-areas/${location.slug}`}
            class="bg-white p-4 rounded-lg text-center hover:bg-red-50 hover:border-red-200 border border-neutral-200 transition-colors"
          >
            <span class="font-semibold text-neutral-900">{location.data.name}</span>
            <span class="text-neutral-500 text-sm ml-1">{location.data.state}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-16 lg:py-24 bg-red-600">
    <div class="container text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Don't Wait - Call Now
      </h2>
      <p class="text-xl text-red-100 mb-8 max-w-2xl mx-auto">
        Every minute counts in an emergency. Our team is standing by to help you 24/7.
      </p>
      <a
        href="tel:+19803916833"
        class="btn bg-white text-red-700 hover:bg-red-50 text-2xl px-12 py-5 font-bold inline-flex items-center shadow-xl"
      >
        <svg class="w-7 h-7 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        (980) 391-6833
      </a>
    </div>
  </section>
</PillarLayout>

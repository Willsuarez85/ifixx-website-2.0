---
import PillarLayout from '../../layouts/PillarLayout.astro';
import { getCollection } from 'astro:content';

// Get all services with category 'emergency'
const allServices = await getCollection('services');
const emergencyServices = allServices.filter(s => s.data.category === 'emergency');

// Get all locations for internal linking
const locations = await getCollection('cities');

const pillar = {
  title: "Same-Day Emergency Handyman Services",
  slug: "emergency-services",
  description: "Same-day emergency handyman services in Charlotte, NC. Water damage cleanup, fixture repairs, door emergencies - we respond fast when you need us most.",
  seo: {
    title: "Emergency Handyman Charlotte NC | Same-Day Repairs | iFIXX",
    description: "Need emergency home repairs in Charlotte? Same-day handyman service. Water damage, fixture repairs, doors & windows. Call owners Jaime or Hamed: (980) 391-6833"
  }
};

// Define emergency services - what we CAN do as handymen
const plannedServices = [
  {
    name: "Water Damage Cleanup & Repair",
    slug: "water-damage",
    description: "Water damage cleanup, drywall repair after leaks, ceiling damage repair. We handle the aftermath same-day.",
    image: "/images/projects/drywall-repair-patching-hole-spackling.webp"
  },
  {
    name: "Faucet & Fixture Emergencies",
    slug: "fixture-repair",
    description: "Leaky faucets, running toilets, dripping showers. Quick fixes that can't wait - no plumber needed for simple repairs.",
    image: "/images/projects/plumbing-emergency-copper-pipe-repair-leak-basement.webp"
  },
  {
    name: "Door & Window Emergencies",
    slug: "doors-windows",
    description: "Door won't lock? Window broken? We secure your home same-day. Board-ups, lock repairs, frame fixes.",
    image: "/images/projects/construction-wood-framing-window.webp"
  },
  {
    name: "Outlet & Fixture Repairs",
    slug: "electrical-fixtures",
    description: "Outlet stopped working? Light switch broken? We replace fixtures and outlets same-day - simple swaps that don't require an electrician.",
    image: "/images/projects/electrical-range-hood-wiring-installation-kitchen.webp"
  }
];

// Use actual services if they exist, otherwise use planned services
const services = emergencyServices.length > 0
  ? emergencyServices.map(s => ({
      name: s.data.title,
      slug: s.slug,
      description: s.data.summary,
      image: s.data.heroImage
    }))
  : plannedServices;
---

<PillarLayout pillar={pillar} services={services}>
  <!-- Emergency Hero Section -->
  <section class="relative bg-red-900 py-20 lg:py-28">
    <div class="absolute inset-0">
      <img
        src="/images/projects/emergency-plumbing-leaking-pipe-water-damage.webp"
        alt="Emergency plumbing repair - leaking pipe"
        class="w-full h-full object-cover opacity-25"
        loading="eager"
        decoding="async"
      />
    </div>
    <div class="absolute inset-0 bg-gradient-to-br from-red-900/90 via-red-800/80 to-red-950/90"></div>
    <div class="container relative">
      <div class="max-w-3xl">
        <!-- Emergency Badge -->
        <div class="inline-flex items-center gap-2 bg-red-500 text-white px-4 py-2 rounded-full text-sm font-bold mb-6 animate-pulse">
          <span class="w-2 h-2 bg-white rounded-full"></span>
          SAME-DAY EMERGENCY RESPONSE
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          Home Emergency? <br/>
          <span class="text-red-300">Same-Day Handyman Help</span>
        </h1>
        <p class="text-xl text-red-100 mb-8 leading-relaxed">
          Leaky faucet? Door won't lock? Water damage?
          Call Jaime or Hamed directly â€” not a call center. We respond same-day.
        </p>
        <p class="text-red-200 mb-6 text-lg">
          ðŸ“· <strong>Text us photos for a free virtual estimate</strong>
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="tel:+19803916833"
            class="btn bg-white text-red-700 hover:bg-red-50 text-xl px-10 py-5 font-bold shadow-xl"
          >
            <svg class="w-6 h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call (980) 391-6833
          </a>
          <a href="/contact" class="btn border-2 border-white text-white hover:bg-white/10 text-lg px-8 py-5">
            Request Callback
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Response Guarantee -->
  <section class="bg-neutral-900 py-8">
    <div class="container">
      <div class="grid md:grid-cols-3 gap-6 text-center">
        <div class="flex items-center justify-center gap-3">
          <svg class="w-8 h-8 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div class="text-left">
            <p class="text-white font-bold">Same-Day Response</p>
            <p class="text-neutral-400 text-sm">Talk to owners, not a call center</p>
          </div>
        </div>
        <div class="flex items-center justify-center gap-3">
          <svg class="w-8 h-8 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          <div class="text-left">
            <p class="text-white font-bold">Fully Insured</p>
            <p class="text-neutral-400 text-sm">Full protection for you</p>
          </div>
        </div>
        <div class="flex items-center justify-center gap-3">
          <svg class="w-8 h-8 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          <div class="text-left">
            <p class="text-white font-bold">Upfront Pricing</p>
            <p class="text-neutral-400 text-sm">No surprise fees</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Services Grid -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">
          Emergency Services We Handle
        </h2>
        <p class="text-lg text-neutral-600">
          When disaster strikes, we have the skills and equipment to help immediately.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {services.map((service) => (
          <div class="group bg-neutral-50 rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 border-l-4 border-red-500">
            <div class="grid md:grid-cols-5">
              <div class="md:col-span-2 aspect-video md:aspect-auto overflow-hidden">
                <img
                  src={service.image}
                  alt={`${service.name} in Charlotte, NC`}
                  class="w-full h-full object-cover"
                  loading="lazy"
                  decoding="async"
                  width="300"
                  height="200"
                />
              </div>
              <div class="md:col-span-3 p-6 flex flex-col justify-center">
                <h3 class="text-xl font-bold text-neutral-900 mb-2">
                  {service.name}
                </h3>
                <p class="text-neutral-600 text-sm mb-4">
                  {service.description}
                </p>
                <a
                  href="tel:+19803916833"
                  class="inline-flex items-center text-red-600 font-bold hover:text-red-700 transition-colors"
                >
                  <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  Call Now
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- What To Do Section -->
  <section class="py-16 lg:py-24 bg-neutral-900 text-white">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            What To Do in a Home Emergency
          </h2>

          <div class="space-y-6">
            <div class="flex gap-4">
              <div class="w-10 h-10 bg-red-500 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-white font-bold">1</span>
              </div>
              <div>
                <h3 class="font-bold text-white mb-1">Stay Calm & Safe</h3>
                <p class="text-neutral-400">Ensure you and your family are out of immediate danger. Evacuate if necessary.</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="w-10 h-10 bg-red-500 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-white font-bold">2</span>
              </div>
              <div>
                <h3 class="font-bold text-white mb-1">Shut Off Utilities</h3>
                <p class="text-neutral-400">For water emergencies, shut off the main water valve. For electrical, switch off the breaker if safe.</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="w-10 h-10 bg-red-500 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-white font-bold">3</span>
              </div>
              <div>
                <h3 class="font-bold text-white mb-1">Call iFixx</h3>
                <p class="text-neutral-400">Call us immediately at (980) 391-6833. We'll dispatch a technician right away.</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="w-10 h-10 bg-red-500 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-white font-bold">4</span>
              </div>
              <div>
                <h3 class="font-bold text-white mb-1">Document Damage</h3>
                <p class="text-neutral-400">Take photos for insurance purposes while waiting for our team to arrive.</p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-red-800 p-8 rounded-2xl text-center">
          <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">Emergency Hotline</h3>
          <p class="text-red-200 mb-2">Same-day service available during business hours.</p>
          <p class="text-red-200 text-sm mb-6">For immediate attention, contact our virtual assistant via chat. A team member will contact you as soon as possible.</p>
          <a
            href="tel:+19803916833"
            class="btn bg-white text-red-700 hover:bg-red-50 text-2xl px-10 py-4 font-bold w-full justify-center"
          >
            (980) 391-6833
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">
          Emergency Service Areas
        </h2>
        <p class="text-lg text-neutral-600">
          We respond to emergencies throughout the greater Charlotte area.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {locations.map((location) => (
          <a
            href={`/service-areas/${location.slug}`}
            class="bg-white p-4 rounded-lg text-center hover:bg-red-50 hover:border-red-200 border border-neutral-200 transition-colors"
          >
            <span class="font-semibold text-neutral-900">{location.data.name}</span>
            <span class="text-neutral-500 text-sm ml-1">{location.data.state}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-8 text-center">
          Frequently Asked Questions
        </h2>
        
        <div class="space-y-6">
          <div class="bg-neutral-50 p-6 rounded-xl">
            <h3 class="font-bold text-lg text-neutral-900 mb-2">How fast can you respond to emergencies?</h3>
            <p class="text-neutral-600">Most emergency calls, we're there same-day. Sometimes within a few hours, depending on our schedule and your location in the Charlotte area. We'll give you an honest timeframe when you call.</p>
          </div>
          
          <div class="bg-neutral-50 p-6 rounded-xl">
            <h3 class="font-bold text-lg text-neutral-900 mb-2">Do you charge extra for same-day service?</h3>
            <p class="text-neutral-600">No hidden emergency fees. Our pricing is the same whether you call Monday morning or Saturday afternoon. We always quote before we start work.</p>
          </div>
          
          <div class="bg-neutral-50 p-6 rounded-xl">
            <h3 class="font-bold text-lg text-neutral-900 mb-2">What emergencies do you handle vs. what needs a specialist?</h3>
            <p class="text-neutral-600">We handle: water damage cleanup, faucet/fixture repairs, door and window emergencies, outlet replacements, drywall repair. For major plumbing (broken pipes in walls), electrical panel issues, or gas leaks, you'll need a licensed specialist â€” and we'll tell you honestly if that's the case.</p>
          </div>
          
          <div class="bg-neutral-50 p-6 rounded-xl">
            <h3 class="font-bold text-lg text-neutral-900 mb-2">How do I get an estimate?</h3>
            <p class="text-neutral-600">Text us photos of the problem at (980) 391-6833. We'll look at it and give you a free virtual estimate â€” approximate cost and how soon we can get there. No charge, no pressure.</p>
          </div>
          
          <div class="bg-neutral-50 p-6 rounded-xl">
            <h3 class="font-bold text-lg text-neutral-900 mb-2">What if it's after hours?</h3>
            <p class="text-neutral-600">We're not 24/7, but we do respond to calls and texts in the evening and on weekends. Leave a message or text us, and we'll get back to you quickly. For true emergencies like gas leaks, call 911 or your utility company first.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-16 lg:py-24 bg-red-600">
    <div class="container text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Don't Wait - Call Now
      </h2>
      <p class="text-xl text-red-100 mb-8 max-w-2xl mx-auto">
        Every minute counts in an emergency. Our team provides same-day service to help you fast.
      </p>
      <a
        href="tel:+19803916833"
        class="btn bg-white text-red-700 hover:bg-red-50 text-2xl px-12 py-5 font-bold inline-flex items-center shadow-xl"
      >
        <svg class="w-7 h-7 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        (980) 391-6833
      </a>
    </div>
  </section>
</PillarLayout>

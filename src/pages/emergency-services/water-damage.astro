---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TrustBar from '../../components/sections/TrustBar.astro';
import CTASection from '../../components/sections/CTASection.astro';
import QuickEstimateCompact from '../../components/forms/QuickEstimateCompact.astro';
import { getCollection } from 'astro:content';

const locations = await getCollection('cities');

const seo = {
  title: "Water Damage Repair Charlotte NC | Same-Day Cleanup | iFIXX",
  description: "Water damage in your Charlotte home? Same-day cleanup and repair. Drywall repair, ceiling damage, flood cleanup. Call Jaime or Hamed: (980) 391-6833"
};

const heroImage = "/images/projects/drywall-repair-patching-hole-spackling.webp";
const projectImage = "/images/projects/painting-drywall-dining-room-wainscoting-chandelier.webp";

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Water Damage Repair Charlotte NC",
  "description": seo.description,
  "provider": {
    "@type": "LocalBusiness",
    "name": "iFIXX Services",
    "telephone": "(980) 391-6833",
    "areaServed": "Charlotte, NC"
  },
  "areaServed": { "@type": "City", "name": "Charlotte", "addressRegion": "NC" }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How fast can you respond to water damage?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We respond same-day in most cases. Call us immediately and we'll get there as fast as possible to minimize damage."
      }
    },
    {
      "@type": "Question",
      "name": "What water damage repairs do you handle?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We handle water damage cleanup, drywall repair and replacement, ceiling repair, painting after water damage, and mold prevention. For major plumbing repairs like burst pipes inside walls, you'll need a licensed plumber."
      }
    },
    {
      "@type": "Question",
      "name": "Do I need a plumber or can you help?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "If the leak is from a faucet, toilet, or simple fixture, we can fix it. If the pipe burst inside a wall or you need major plumbing work, you'll need a licensed plumber first. We handle the cleanup and repair AFTER the source is fixed."
      }
    }
  ]
};

const bullets = [
  "Water extraction and cleanup",
  "Drywall repair and replacement",
  "Ceiling damage repair",
  "Texture matching",
  "Painting after water damage",
  "Mold prevention treatment"
];

const faqs = [
  {
    q: "How fast can you respond to water damage?",
    a: "We respond same-day in most cases. Water damage gets worse every hour, so call us immediately. We'll get there as fast as possible to minimize damage to your home."
  },
  {
    q: "What water damage repairs do you handle?",
    a: "We handle water extraction, drywall repair and replacement, ceiling repair, painting, baseboard replacement, and general restoration. For major plumbing repairs like burst pipes inside walls, you'll need a licensed plumber first — then we handle the aftermath."
  },
  {
    q: "Do I need a plumber or can you help?",
    a: "If the leak is from a faucet, toilet, or simple fixture — we can fix it. If a pipe burst inside a wall or you need major plumbing work, call a licensed plumber first. Once the source is fixed, we handle all the cleanup and repair work."
  },
  {
    q: "How much does water damage repair cost?",
    a: "It depends on the extent of damage. Small ceiling repairs might be $200-500. Larger repairs with drywall replacement can be $500-2,000+. Text us photos and we'll give you a free estimate before we start."
  },
  {
    q: "Will you work with my insurance?",
    a: "We can provide documentation and photos for your insurance claim. We're not a restoration company that bills insurance directly, but we'll give you everything you need to file your claim."
  }
];
---

<BaseLayout title={seo.title} description={seo.description} canonical="/emergency-services/water-damage">
  <Fragment slot="schema">
    <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  </Fragment>

  <!-- Hero Section -->
  <section class="relative bg-neutral-900 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img
        src={heroImage}
        alt="Water damage repair in Charlotte NC"
        class="w-full h-full object-cover"
        width="1920"
        height="1080"
        fetchpriority="high"
        decoding="async"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-neutral-900/95 via-neutral-900/85 to-neutral-900/60"></div>
    </div>

    <div class="container relative z-10">
      <div class="py-12 lg:py-20">
        <!-- Breadcrumb -->
        <nav class="mb-6">
          <ol class="flex items-center gap-2 text-sm text-neutral-300">
            <li><a href="/" class="hover:text-primary-500 transition-colors">Home</a></li>
            <li class="text-neutral-500">/</li>
            <li><a href="/emergency-services" class="hover:text-primary-500 transition-colors">Emergency Services</a></li>
            <li class="text-neutral-500">/</li>
            <li class="text-white font-medium">Water Damage</li>
          </ol>
        </nav>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-start">
          <!-- Content Side -->
          <div class="order-2 lg:order-1">
            <span class="inline-block px-4 py-2 bg-primary-500 text-neutral-900 text-sm font-bold rounded-full mb-4">
              Same-Day Emergency Response
            </span>

            <h1 class="text-3xl lg:text-4xl xl:text-5xl font-heading font-bold text-white mb-4">
              Water Damage Repair in Charlotte, NC
            </h1>

            <p class="text-lg text-neutral-200 mb-6 max-w-xl">
              Water in your ceiling? Flooded basement? We handle the cleanup and repair — same-day when you need it most.
            </p>

            <!-- Benefit Icons -->
            <div class="grid grid-cols-2 gap-4 mb-8">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Same-Day Response</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Talk to Owners</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Fully Insured</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Upfront Pricing</span>
              </div>
            </div>

            <!-- Phone CTA -->
            <a href="tel:+19803916833" class="inline-flex items-center gap-3 text-white hover:text-primary-400 transition-colors">
              <div class="w-12 h-12 rounded-full bg-primary-500 flex items-center justify-center">
                <svg class="w-6 h-6 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-neutral-400">Call us now</p>
                <p class="text-xl font-heading font-bold">(980) 391-6833</p>
              </div>
            </a>
          </div>

          <!-- Form Side -->
          <div class="order-1 lg:order-2">
            <QuickEstimateCompact
              serviceSlug="water-damage"
              serviceTitle="Water Damage Repair"
              formId="hero-estimate-water-damage"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar -->
  <TrustBar variant="light" />

  <!-- What We Handle -->
  <section class="section">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-6">
            Water Damage Services We Provide
          </h2>
          <ul class="space-y-4 mb-8">
            {bullets.map((bullet) => (
              <li class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-full bg-primary-500 flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <span class="text-neutral-700">{bullet}</span>
              </li>
            ))}
          </ul>

          <div class="prose prose-neutral max-w-none">
            <p>We handle the aftermath of water damage — once the source of the leak is fixed. Our team cleans up, removes damaged materials, repairs drywall, matches textures, and paints. Your walls will look like the damage never happened.</p>
          </div>
        </div>

        <div class="relative">
          <div class="rounded-2xl overflow-hidden shadow-2xl">
            <img
              src={projectImage}
              alt="Water damage drywall repair by iFIXX in Charlotte"
              class="w-full h-auto object-cover aspect-[4/3]"
              width="600"
              height="450"
              loading="lazy"
              decoding="async"
            />
          </div>
          <div class="absolute -bottom-4 -right-4 bg-white rounded-xl shadow-xl p-4 hidden lg:block">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full bg-primary-500 flex items-center justify-center">
                <svg class="w-5 h-5 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <p class="font-heading font-bold text-neutral-900 text-sm">Same-Day</p>
                <p class="text-xs text-neutral-600">Response Available</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- What Needs a Specialist -->
  <section class="py-12 bg-amber-50 border-y border-amber-200">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h3 class="text-xl font-heading font-bold text-amber-800 mb-4">
          ⚠️ What Requires a Specialist
        </h3>
        <p class="text-amber-700 mb-4">
          We're honest about what we can and can't do. For these situations, you'll need a licensed professional first:
        </p>
        <div class="flex flex-wrap justify-center gap-3">
          <span class="bg-amber-100 text-amber-800 px-4 py-2 rounded-full text-sm font-medium">Burst pipes inside walls</span>
          <span class="bg-amber-100 text-amber-800 px-4 py-2 rounded-full text-sm font-medium">Main water line breaks</span>
          <span class="bg-amber-100 text-amber-800 px-4 py-2 rounded-full text-sm font-medium">Sewer backups</span>
          <span class="bg-amber-100 text-amber-800 px-4 py-2 rounded-full text-sm font-medium">Water heater replacement</span>
        </div>
        <p class="text-amber-700 mt-4 text-sm">
          Once the source is fixed by a plumber, we handle all the cleanup and repair work.
        </p>
      </div>
    </div>
  </section>

  <!-- Our Process -->
  <section class="section bg-neutral-900 text-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl lg:text-3xl font-heading font-bold text-center mb-12">
          Our Water Damage Repair Process
        </h2>

        <div class="grid md:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-neutral-900">1</span>
            </div>
            <h3 class="font-heading font-bold mb-2">Call or Text</h3>
            <p class="text-neutral-400 text-sm">Send us photos of the damage. We'll give you a quick estimate.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-neutral-900">2</span>
            </div>
            <h3 class="font-heading font-bold mb-2">We Arrive Same-Day</h3>
            <p class="text-neutral-400 text-sm">Jaime or Hamed shows up to assess the situation in person.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-neutral-900">3</span>
            </div>
            <h3 class="font-heading font-bold mb-2">Cleanup & Repair</h3>
            <p class="text-neutral-400 text-sm">We remove damaged materials, dry the area, and start repairs.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-neutral-900">4</span>
            </div>
            <h3 class="font-heading font-bold mb-2">Restore & Finish</h3>
            <p class="text-neutral-400 text-sm">Drywall, paint, and trim — back to how it looked before.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-8 text-center">
          Water Damage FAQs
        </h2>
        
        <div class="space-y-4">
          {faqs.map((faq) => (
            <div class="bg-neutral-50 p-6 rounded-xl border border-neutral-200">
              <h3 class="font-heading font-bold text-lg text-neutral-900 mb-2">{faq.q}</h3>
              <p class="text-neutral-600">{faq.a}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="py-12 bg-neutral-100">
    <div class="container">
      <div class="text-center max-w-2xl mx-auto mb-8">
        <h2 class="text-xl font-heading font-bold text-neutral-900 mb-2">
          Water Damage Repair Service Areas
        </h2>
        <p class="text-neutral-600 text-sm">
          We respond to water damage emergencies throughout the Charlotte metro area.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-3 max-w-4xl mx-auto">
        {locations.slice(0, 12).map((location) => (
          <a
            href={`/service-areas/${location.slug}`}
            class="bg-white p-3 rounded-lg text-center hover:bg-primary-50 hover:border-primary-200 border border-neutral-200 transition-colors text-sm"
          >
            <span class="font-medium text-neutral-900">{location.data.name}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <CTASection />
</BaseLayout>

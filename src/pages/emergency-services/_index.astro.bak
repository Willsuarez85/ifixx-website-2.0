---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TrustBar from '../../components/sections/TrustBar.astro';
import CTASection from '../../components/sections/CTASection.astro';
import QuickEstimateCompact from '../../components/forms/QuickEstimateCompact.astro';

const seo = {
  title: "Emergency Home Repair Charlotte NC | Same-Day Service | iFIXX",
  description: "Same-day emergency home repairs in Charlotte. Water damage, leaky faucets, door repairs. Talk directly to owners Jaime or Hamed. Call: (980) 391-6833"
};

const heroImage = "/images/projects/home-repair-tools-collection-workbench-hammer-screwdrivers.webp";

const pageSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Emergency Home Repair Services Charlotte NC",
  "description": seo.description,
  "url": "https://www.ifixxnc.com/emergency-services/",
  "mainEntity": {
    "@type": "ItemList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "url": "https://www.ifixxnc.com/emergency-services/water-damage",
        "name": "Water Damage Repair"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "url": "https://www.ifixxnc.com/emergency-services/fixture-repair",
        "name": "Faucet & Fixture Repair"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "url": "https://www.ifixxnc.com/emergency-services/doors-windows",
        "name": "Door & Window Repair"
      }
    ]
  }
};

const emergencyServices = [
  {
    slug: "water-damage",
    title: "Water Damage Repair",
    description: "Ceiling leak? Flooded room? We clean up and repair the damage â€” drywall, painting, everything to make it look like it never happened.",
    icon: "ðŸ’§",
    image: "/images/projects/drywall-repair-patching-hole-spackling.webp"
  },
  {
    slug: "fixture-repair",
    title: "Faucet & Fixture Repair",
    description: "Leaky faucet? Running toilet? We fix and replace fixtures same-day â€” no plumber needed for simple repairs.",
    icon: "ðŸš¿",
    image: "/images/projects/plumbing-bathroom-faucet-installation-repair.webp"
  },
  {
    slug: "doors-windows",
    title: "Door & Window Repair",
    description: "Door won't lock? Window broken? We secure your home same-day. Your safety is our priority.",
    icon: "ðŸšª",
    image: "/images/projects/door-installation-interior-hinge-leveling-brass.webp"
  }
];
---

<BaseLayout title={seo.title} description={seo.description} canonical="/emergency-services">
  <Fragment slot="schema">
    <script type="application/ld+json" set:html={JSON.stringify(pageSchema)} />
  </Fragment>

  <!-- Hero Section -->
  <section class="relative bg-neutral-900 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img
        src={heroImage}
        alt="Emergency home repair tools"
        class="w-full h-full object-cover"
        width="1920"
        height="1080"
        fetchpriority="high"
        decoding="async"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-neutral-900/95 via-neutral-900/85 to-neutral-900/60"></div>
    </div>

    <div class="container relative z-10">
      <div class="py-12 lg:py-20">
        <!-- Breadcrumb -->
        <nav class="mb-6">
          <ol class="flex items-center gap-2 text-sm text-neutral-300">
            <li><a href="/" class="hover:text-primary-500 transition-colors">Home</a></li>
            <li class="text-neutral-500">/</li>
            <li class="text-white font-medium">Emergency Services</li>
          </ol>
        </nav>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-start">
          <!-- Content Side -->
          <div class="order-2 lg:order-1">
            <span class="inline-block px-4 py-2 bg-primary-500 text-neutral-900 text-sm font-bold rounded-full mb-4">
              Same-Day Response
            </span>

            <h1 class="text-3xl lg:text-4xl xl:text-5xl font-heading font-bold text-white mb-4">
              Emergency Home Repairs in Charlotte, NC
            </h1>

            <p class="text-lg text-neutral-200 mb-6 max-w-xl">
              When something breaks and you need it fixed NOW â€” not next week â€” call us. Same-day repairs for water damage, fixtures, doors, and more.
            </p>

            <!-- Benefit Icons -->
            <div class="grid grid-cols-2 gap-4 mb-8">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Same-Day Service</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Talk to Owners</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Upfront Pricing</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Fully Insured</span>
              </div>
            </div>

            <!-- Phone CTA -->
            <a href="tel:+19803916833" class="inline-flex items-center gap-3 text-white hover:text-primary-400 transition-colors">
              <div class="w-12 h-12 rounded-full bg-primary-500 flex items-center justify-center">
                <svg class="w-6 h-6 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-neutral-400">Call us now</p>
                <p class="text-xl font-heading font-bold">(980) 391-6833</p>
              </div>
            </a>
          </div>

          <!-- Form Side -->
          <div class="order-1 lg:order-2">
            <QuickEstimateCompact
              serviceSlug="emergency"
              serviceTitle="Emergency Repair"
              formId="hero-estimate-emergency"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar -->
  <TrustBar variant="light" />

  <!-- What Makes This Different -->
  <section class="py-12 bg-primary-500">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-4">
          Not a Call Center. Real People.
        </h2>
        <p class="text-lg text-neutral-800 mb-6 max-w-2xl mx-auto">
          When you call (980) 391-6833, you talk directly to <strong>Jaime</strong> or <strong>Hamed</strong> â€” the owners. 
          No dispatcher. No waiting. No "someone will call you back."
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="tel:+19803916833" class="bg-neutral-900 text-white px-6 py-3 rounded-lg font-bold hover:bg-neutral-800 transition-colors">
            ðŸ“ž Call Now
          </a>
          <a href="sms:+19803916833" class="bg-white text-neutral-900 px-6 py-3 rounded-lg font-bold border-2 border-neutral-900 hover:bg-neutral-100 transition-colors">
            ðŸ’¬ Text a Photo
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Services Grid -->
  <section class="section">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-4">
          Emergency Repair Services
        </h2>
        <p class="text-neutral-600 max-w-2xl mx-auto">
          Click on any service for detailed information, pricing, and FAQs.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {emergencyServices.map((service) => (
          <a 
            href={`/emergency-services/${service.slug}`}
            class="group bg-white rounded-2xl overflow-hidden shadow-lg border border-neutral-200 hover:shadow-xl hover:border-primary-300 transition-all"
          >
            <div class="aspect-[4/3] overflow-hidden">
              <img 
                src={service.image} 
                alt={service.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                width="400"
                height="300"
                loading="lazy"
              />
            </div>
            <div class="p-6">
              <div class="text-3xl mb-3">{service.icon}</div>
              <h3 class="text-xl font-heading font-bold text-neutral-900 mb-2 group-hover:text-primary-600 transition-colors">
                {service.title}
              </h3>
              <p class="text-neutral-600 text-sm mb-4">
                {service.description}
              </p>
              <span class="inline-flex items-center text-primary-600 font-medium text-sm group-hover:gap-2 transition-all">
                Learn More 
                <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- What We Don't Do -->
  <section class="py-12 bg-neutral-100">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-xl font-heading font-bold text-neutral-900 mb-6 text-center">
          We're Honest About What We Do (and Don't Do)
        </h2>
        
        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-white p-6 rounded-xl border border-green-200">
            <h3 class="font-bold text-green-700 mb-3 flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              We Handle
            </h3>
            <ul class="text-sm text-neutral-600 space-y-2">
              <li>â€¢ Faucet & fixture repairs</li>
              <li>â€¢ Water damage cleanup & drywall repair</li>
              <li>â€¢ Door frame & lock repairs</li>
              <li>â€¢ Window board-up & simple fixes</li>
              <li>â€¢ General handyman repairs</li>
            </ul>
          </div>
          
          <div class="bg-white p-6 rounded-xl border border-amber-200">
            <h3 class="font-bold text-amber-700 mb-3 flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              Needs a Specialist
            </h3>
            <ul class="text-sm text-neutral-600 space-y-2">
              <li>â€¢ Pipes inside walls (plumber)</li>
              <li>â€¢ Main water line breaks (plumber)</li>
              <li>â€¢ Electrical panel work (electrician)</li>
              <li>â€¢ Large glass replacement (glass co.)</li>
              <li>â€¢ HVAC issues (HVAC specialist)</li>
            </ul>
          </div>
        </div>
        
        <p class="text-center text-neutral-600 mt-6 text-sm">
          Not sure who you need? Call or text us â€” we'll tell you honestly if we can help.
        </p>
      </div>
    </div>
  </section>

  <!-- Process -->
  <section class="section bg-neutral-900 text-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl lg:text-3xl font-heading font-bold text-center mb-12">
          How Emergency Service Works
        </h2>

        <div class="grid md:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-neutral-900">1</span>
            </div>
            <h3 class="font-heading font-bold mb-2">Call or Text</h3>
            <p class="text-neutral-400 text-sm">Talk to Jaime or Hamed directly. Send us photos if you can.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-neutral-900">2</span>
            </div>
            <h3 class="font-heading font-bold mb-2">Quick Quote</h3>
            <p class="text-neutral-400 text-sm">We give you an estimate based on what you describe.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-neutral-900">3</span>
            </div>
            <h3 class="font-heading font-bold mb-2">We Arrive</h3>
            <p class="text-neutral-400 text-sm">Same-day service for most emergencies.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-neutral-900">4</span>
            </div>
            <h3 class="font-heading font-bold mb-2">Problem Solved</h3>
            <p class="text-neutral-400 text-sm">We fix it and clean up. You're back to normal.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <CTASection />
</BaseLayout>

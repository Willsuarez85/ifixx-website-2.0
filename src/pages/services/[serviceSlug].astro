---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import TrustBar from '../../components/sections/TrustBar.astro';
import BenefitIcons from '../../components/sections/BenefitIcons.astro';
import CTAIntermediate from '../../components/sections/CTAIntermediate.astro';
import CTASection from '../../components/sections/CTASection.astro';
import QuickEstimateCompact from '../../components/forms/QuickEstimateCompact.astro';
import ScrollGallery from '../../components/sections/ScrollGallery.astro';
import GoogleReviews from '../../components/sections/GoogleReviews.astro';

export async function getStaticPaths() {
  const services = await getCollection('services');
  return services.map((service) => ({
    params: { serviceSlug: service.slug },
    props: { service },
  }));
}

interface Props {
  service: CollectionEntry<'services'>;
}

const { service } = Astro.props;
const { Content } = await service.render();

const { title, category, summary, heroImage, bullets, signs, processSteps, faqs, seo } = service.data;

// Map service slugs to hero images (using impactful portfolio images)
const serviceHeroImages: Record<string, string> = {
  'plumbing': '/images/projects/Ifixx-portfolio45.webp', // Technician working under sink
  'electrical': '/images/services/electrical.webp', // Keep existing
  'carpentry': '/images/projects/Ifixx-portfolio12.webp', // Team installing cabinets
  'painting': '/images/projects/Ifixx-portfolio8.webp', // Team doing painting work
  'doors-windows': '/images/projects/Ifixx-portfolio55.webp', // Door hinge repair
  'general-repairs': '/images/projects/Ifixx-portfolio31.webp', // Cabinet repair work
  'quick-fix': '/images/projects/Ifixx-portfolio5.webp', // Quick repair work
  'bathroom-remodel': '/images/projects/Ifixx-portfolio32.webp', // Luxury bathroom with freestanding tub
  'kitchen-remodel': '/images/projects/Ifixx-portfolio60.webp', // Navy luxury kitchen with gold accents
};

// Map service slugs to project images (showing completed work)
const serviceProjectImages: Record<string, string> = {
  'plumbing': '/images/projects/Ifixx-portfolio28.webp', // Modern bathroom with plumbing work
  'electrical': '/images/projects/Ifixx-portfolio17.webp', // Kitchen with modern lighting
  'carpentry': '/images/projects/Ifixx-portfolio1.webp', // Kitchen island with beadboard
  'painting': '/images/projects/Ifixx-portfolio20.webp', // White painted kitchen
  'doors-windows': '/images/projects/Ifixx-portfolio19.webp', // Room with wainscoting
  'general-repairs': '/images/projects/Ifixx-portfolio3.webp', // Dark modern kitchen
  'quick-fix': '/images/projects/Ifixx-portfolio11.webp', // White kitchen
  'bathroom-remodel': '/images/projects/Ifixx-portfolio32.webp', // Luxury bathroom
  'kitchen-remodel': '/images/projects/Ifixx-portfolio63.webp', // White luxury kitchen with marble
};

const heroImageSrc = heroImage || serviceHeroImages[service.slug] || '/images/ui/hero-bg.jpg';
const projectImageSrc = serviceProjectImages[service.slug] || '/images/projects/Ifixx-portfolio3.webp';

// Service schema
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": title,
  "description": seo.description,
  "provider": {
    "@type": "HomeAndConstructionBusiness",
    "name": "iFixx Remodeling & Handyman Services",
    "url": "https://ifixxnc.com"
  },
  "areaServed": {
    "@type": "City",
    "name": "Charlotte",
    "containedInPlace": {
      "@type": "State",
      "name": "North Carolina"
    }
  }
};

// Breadcrumb schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://ifixxnc.com"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Services",
      "item": "https://ifixxnc.com/services"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": title,
      "item": `https://ifixxnc.com/services/${service.slug}`
    }
  ]
};

// FAQ schema
const faqSchema = faqs && faqs.length > 0 ? {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map((faq) => ({
    "@type": "Question",
    "name": faq.q,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.a
    }
  }))
} : null;

const categoryLabels: Record<string, string> = {
  emergency: 'Emergency Service',
  handyman: 'Handyman Service',
  remodeling: 'Remodeling Service'
};
---

<BaseLayout
  title={seo.title}
  description={seo.description}
  canonical={`/services/${service.slug}`}
>
  <Fragment slot="schema">
    <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
    {faqSchema && <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />}
  </Fragment>

  <!-- Hero Section with Side-by-Side Form (Above the Fold) -->
  <section class="relative bg-neutral-900 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img
        src={heroImageSrc}
        alt={`${title} services in Charlotte NC - iFixx professional team`}
        class="w-full h-full object-cover"
        width="1920"
        height="1080"
        fetchpriority="high"
        decoding="async"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-neutral-900/95 via-neutral-900/85 to-neutral-900/60"></div>
    </div>

    <div class="container relative z-10">
      <div class="py-12 lg:py-20">
        <!-- Breadcrumb -->
        <nav class="mb-6">
          <ol class="flex items-center gap-2 text-sm text-neutral-300">
            <li><a href="/" class="hover:text-primary-500 transition-colors">Home</a></li>
            <li class="text-neutral-500">/</li>
            <li><a href="/services" class="hover:text-primary-500 transition-colors">Services</a></li>
            <li class="text-neutral-500">/</li>
            <li class="text-white font-medium">{title}</li>
          </ol>
        </nav>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-start">
          <!-- Content Side -->
          <div class="order-2 lg:order-1">
            <!-- Category Badge -->
            <span class="inline-block px-4 py-2 bg-primary-500 text-neutral-900 text-sm font-bold rounded-full mb-4">
              {categoryLabels[category] || category}
            </span>

            <h1 class="text-3xl lg:text-4xl xl:text-5xl font-heading font-bold text-white mb-4">
              Professional {title} in Charlotte, NC
            </h1>

            <p class="text-lg text-neutral-200 mb-6 max-w-xl">
              {summary}
            </p>

            <!-- Benefit Icons -->
            <div class="grid grid-cols-2 gap-4 mb-8">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Quality Guaranteed</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Fast Response</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">100% Local</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Fully Insured</span>
              </div>
            </div>

            <!-- Phone CTA -->
            <a href="tel:+19803916833" class="inline-flex items-center gap-3 text-white hover:text-primary-400 transition-colors">
              <div class="w-12 h-12 rounded-full bg-primary-500 flex items-center justify-center">
                <svg class="w-6 h-6 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-neutral-400">Call us now</p>
                <p class="text-xl font-heading font-bold">(980) 391-6833</p>
              </div>
            </a>
          </div>

          <!-- Form Side (Above the Fold) -->
          <div class="order-1 lg:order-2">
            <QuickEstimateCompact
              serviceSlug={service.slug}
              serviceTitle={title}
              formId={`hero-estimate-${service.slug}`}
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar -->
  <TrustBar variant="light" />

  <!-- What We Offer + Image -->
  {bullets && bullets.length > 0 && (
    <section class="section">
      <div class="container">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Content -->
          <div>
            <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-6">
              What We Offer
            </h2>
            <ul class="space-y-4 mb-8">
              {bullets.map((bullet) => (
                <li class="flex items-start gap-3">
                  <div class="w-6 h-6 rounded-full bg-primary-500 flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-4 h-4 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <span class="text-neutral-700">{bullet}</span>
                </li>
              ))}
            </ul>

            <!-- Content from MDX -->
            <div class="prose prose-neutral max-w-none">
              <Content />
            </div>
          </div>

          <!-- Image -->
          <div class="relative">
            <div class="rounded-2xl overflow-hidden shadow-2xl">
              <img
                src={projectImageSrc}
                alt={`${title} project by iFixx in Charlotte NC`}
                class="w-full h-auto object-cover aspect-[4/3]"
                width="600"
                height="450"
                loading="lazy"
                decoding="async"
              />
            </div>
            <!-- Floating Badge -->
            <div class="absolute -bottom-4 -right-4 bg-white rounded-xl shadow-xl p-4 hidden lg:block">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500 flex items-center justify-center">
                  <svg class="w-5 h-5 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <div>
                  <p class="font-heading font-bold text-neutral-900 text-sm">500+ Projects</p>
                  <p class="text-xs text-neutral-600">Completed in Charlotte</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Project Gallery -->
  <ScrollGallery
    serviceSlug={service.slug}
    title={`Our ${title} Projects`}
  />

  <!-- Intermediate CTA -->
  <CTAIntermediate
    headline={`Ready to Transform Your Home?`}
    subheadline="Get a free estimate for your project. No obligation, fast response."
    variant="primary"
    showPhone={true}
  />

  <!-- Signs You Need This Service -->
  {signs && signs.length > 0 && (
    <section class="section section-alt">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-4">
            Signs You May Need {title}
          </h2>
          <p class="text-neutral-600">
            Not sure if you need help? Here are common signs it's time to call a professional.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
          {signs.map((sign) => (
            <div class="flex items-start gap-4 p-5 bg-white rounded-xl shadow-sm">
              <div class="w-10 h-10 rounded-full bg-yellow-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
              </div>
              <span class="text-neutral-700">{sign}</span>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Our Process -->
  {processSteps && processSteps.length > 0 && (
    <section class="section">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-4">
            How It Works
          </h2>
          <p class="text-neutral-600">
            We make getting quality {title.toLowerCase()} simple and stress-free.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          {processSteps.map((step, index) => (
            <div class="text-center relative">
              {/* Connector line */}
              {index < processSteps.length - 1 && (
                <div class="hidden md:block absolute top-8 left-1/2 w-full h-0.5 bg-primary-200"></div>
              )}
              <div class="relative">
                <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-primary-500 flex items-center justify-center shadow-lg">
                  <span class="text-2xl font-heading font-bold text-neutral-900">{index + 1}</span>
                </div>
              </div>
              <h3 class="text-lg font-heading font-semibold text-neutral-900 mb-2">
                {step.title}
              </h3>
              <p class="text-neutral-600 text-sm">
                {step.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Google Reviews -->
  <GoogleReviews title="What Charlotte Homeowners Say" />

  <!-- FAQs -->
  {faqs && faqs.length > 0 && (
    <section class="section section-alt">
      <div class="container">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-8 text-center">
            Frequently Asked Questions
          </h2>

          <div class="space-y-4">
            {faqs.map((faq, index) => (
              <details class="group bg-white rounded-xl shadow-sm" open={index === 0}>
                <summary class="flex items-center justify-between cursor-pointer list-none p-6">
                  <span class="font-semibold text-neutral-900 pr-4">{faq.q}</span>
                  <svg class="w-5 h-5 text-primary-500 group-open:rotate-180 transition-transform flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                  </svg>
                </summary>
                <div class="px-6 pb-6">
                  <p class="text-neutral-600 leading-relaxed">
                    {faq.a}
                  </p>
                </div>
              </details>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Final CTA -->
  <CTASection
    headline={`Ready for Professional ${title}?`}
    subtext="Get a free estimate and see why Charlotte homeowners trust iFixx for quality work."
  />
</BaseLayout>

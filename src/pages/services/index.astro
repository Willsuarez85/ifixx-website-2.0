---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import TrustBar from '../../components/sections/TrustBar.astro';
import CTASection from '../../components/sections/CTASection.astro';

const services = await getCollection('services');

const seoTitle = "Our Services | iFixx Remodeling & Handyman Services";
const seoDescription = "Professional handyman and remodeling services in Charlotte, NC. Painting, electrical, plumbing, carpentry, and more. Fully insured.";

// Map service slugs to images (using best portfolio images)
const serviceImages: Record<string, string> = {
  'painting': '/images/projects/Ifixx-portfolio8.webp', // Team doing painting work
  'electrical': '/images/services/electrical.webp', // Keep existing
  'doors-windows': '/images/projects/Ifixx-portfolio55.webp', // Door hinge repair
  'carpentry': '/images/projects/Ifixx-portfolio12.webp', // Team installing cabinets
  'plumbing': '/images/projects/Ifixx-portfolio45.webp', // Technician plumbing under cabinet
  'quick-fix': '/images/projects/Ifixx-portfolio5.webp', // Technician repairing cabinet
  'general-repairs': '/images/projects/Ifixx-portfolio31.webp', // General repair work
  'bathroom-remodel': '/images/projects/Ifixx-portfolio32.webp', // Luxury bathroom with freestanding tub
  'kitchen-remodel': '/images/projects/Ifixx-portfolio60.webp' // Navy luxury kitchen with gold accents
};

const getServiceImage = (slug: string) => {
  return serviceImages[slug] || '/images/services/general-repairs.jpg';
};

// JSON-LD Schema
const servicesSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "iFixx Home Services",
  "description": seoDescription,
  "numberOfItems": services.length,
  "itemListElement": services.map((service, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "item": {
      "@type": "Service",
      "name": service.data.title,
      "description": service.data.summary,
      "url": `https://ifixxnc.com/services/${service.slug}`
    }
  }))
};
---

<BaseLayout
  title={seoTitle}
  description={seoDescription}
  canonical="/services"
>
  <Fragment slot="schema">
    <script type="application/ld+json" set:html={JSON.stringify(servicesSchema)} />
  </Fragment>

  <!-- Hero Section with Background -->
  <section class="relative py-20 lg:py-28 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img
        src="/images/ui/team.jpg"
        alt="iFixx professional handyman team providing home services in Charlotte NC"
        class="w-full h-full object-cover"
        width="1920"
        height="1080"
        fetchpriority="high"
        decoding="async"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-neutral-900/95 via-neutral-900/85 to-neutral-900/70"></div>
    </div>

    <!-- Content -->
    <div class="container relative z-10">
      <div class="max-w-3xl">
        <span class="inline-block px-4 py-2 bg-primary-500 text-neutral-900 text-sm font-bold rounded-full mb-6">
          Full-Service Home Solutions
        </span>
        <h1 class="text-4xl lg:text-5xl xl:text-6xl font-heading font-bold text-white mb-6">
          Professional Home Services in Charlotte
        </h1>
        <p class="text-lg lg:text-xl text-neutral-300 mb-8 max-w-2xl">
          From quick fixes to complete renovations. Our skilled team handles every aspect of your home improvement needs with quality craftsmanship.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="/contact" class="btn btn-primary text-lg px-8 py-4">
            Get Free Estimate
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href="tel:+19803916833" class="btn btn-outline-light text-lg px-8 py-4">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            (980) 391-6833
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar -->
  <TrustBar variant="light" />

  <!-- Services Grid -->
  <section class="section">
    <div class="container">
      <!-- Section Header -->
      <div class="text-center max-w-2xl mx-auto mb-12 lg:mb-16">
        <h2 class="text-3xl lg:text-4xl font-heading font-bold text-neutral-900 mb-4">
          What We Do Best
        </h2>
        <p class="text-lg text-neutral-600">
          Choose the service you need. Each project gets our full attention, expert craftsmanship, and satisfaction guarantee.
        </p>
      </div>

      <!-- Services Grid with Images -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {services.map((service) => (
          <a href={`/services/${service.slug}`} class="group relative block rounded-xl overflow-hidden aspect-[4/3] shadow-lg">
            <!-- Background Image -->
            <img
              src={getServiceImage(service.slug)}
              alt={`${service.data.title} services in Charlotte NC - iFixx`}
              class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              width="400"
              height="300"
              loading="lazy"
              decoding="async"
            />

            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-neutral-900/90 via-neutral-900/50 to-transparent"></div>

            <!-- Content -->
            <div class="absolute inset-0 flex flex-col justify-end p-6">
              <h3 class="text-xl lg:text-2xl font-heading font-bold text-white mb-2 group-hover:text-primary-400 transition-colors">
                {service.data.title}
              </h3>
              <p class="text-neutral-200 text-sm leading-relaxed mb-3 line-clamp-2">
                {service.data.summary}
              </p>

              <!-- Link -->
              <span class="inline-flex items-center text-primary-400 font-semibold text-sm group-hover:gap-2 transition-all">
                View Service
                <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="section section-alt">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Content -->
        <div>
          <h2 class="text-3xl lg:text-4xl font-heading font-bold text-neutral-900 mb-6">
            Why Charlotte Homeowners Trust iFixx
          </h2>
          <p class="text-lg text-neutral-600 mb-8">
            We're not just contractors â€” we're your neighbors. As a family-owned business, we bring care, honesty, and craftsmanship to every project.
          </p>

          <div class="space-y-4">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-primary-500 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="font-heading font-semibold text-neutral-900 mb-1">Quality Guaranteed</h3>
                <p class="text-neutral-600 text-sm">We stand behind our work. If you're not happy, we'll make it right.</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-primary-500 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-heading font-semibold text-neutral-900 mb-1">On-Time, Every Time</h3>
                <p class="text-neutral-600 text-sm">We respect your schedule. Expect punctual arrivals and project timelines.</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-primary-500 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <div>
                <h3 class="font-heading font-semibold text-neutral-900 mb-1">Fully Insured</h3>
                <p class="text-neutral-600 text-sm">Your home is protected. We carry full liability insurance.</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-primary-500 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-heading font-semibold text-neutral-900 mb-1">Proudly Local</h3>
                <p class="text-neutral-600 text-sm">Based in Charlotte, serving our community for years.</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Image -->
        <div class="relative">
          <div class="rounded-2xl overflow-hidden shadow-2xl">
            <img
              src="/images/projects/Ifixx-portfolio32.webp"
              alt="Quality craftsmanship by iFixx - bathroom remodel in Charlotte NC"
              class="w-full h-auto object-cover aspect-[4/3]"
              width="600"
              height="450"
              loading="lazy"
              decoding="async"
            />
          </div>
          <!-- Floating Badge -->
          <div class="absolute -bottom-6 -left-6 bg-white rounded-xl shadow-xl p-4 hidden lg:block">
            <div class="flex items-center gap-3">
              <div class="flex -space-x-2">
                <div class="w-10 h-10 rounded-full bg-primary-500 flex items-center justify-center border-2 border-white">
                  <svg class="w-5 h-5 text-neutral-900" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                </div>
              </div>
              <div>
                <p class="font-heading font-bold text-neutral-900">5.0 Rating</p>
                <p class="text-xs text-neutral-600">87+ Reviews</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CTASection />
</BaseLayout>

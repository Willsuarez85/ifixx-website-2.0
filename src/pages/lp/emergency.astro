---
import LandingLayout from '../../layouts/LandingLayout.astro';
import LandingForm from '../../components/forms/LandingForm.astro';

const seo = {
  title: "Emergency Home Repair Charlotte NC | Same-Day | iFIXX",
  description: "Same-day emergency home repairs in Charlotte. Water damage, faucets, doors, drywall. Talk to owners directly. Call (980) 391-6833."
};
---

<LandingLayout title={seo.title} description={seo.description} canonical="/lp/emergency">

  <!-- Hero -->
  <section class="relative bg-neutral-900 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img src="/images/projects/home-repair-tools-collection-workbench-hammer-screwdrivers.webp" alt="Emergency repair tools" class="w-full h-full object-cover opacity-20" />
    </div>
    <div class="container relative z-10 py-12 lg:py-16">
      <div class="grid lg:grid-cols-5 gap-8 lg:gap-12 items-start">
        <!-- Left Content -->
        <div class="lg:col-span-3">
          <div class="inline-flex items-center gap-2 bg-red-600/20 border border-red-500/30 rounded-full px-4 py-1.5 mb-6">
            <span class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></span>
            <span class="text-red-400 text-sm font-bold uppercase tracking-wide">Same-Day Response</span>
          </div>

          <h1 class="text-4xl lg:text-5xl xl:text-6xl font-heading font-bold text-white mb-6 leading-tight">
            Home Emergency?<br><span class="text-primary-500">We Fix It Today.</span>
          </h1>

          <p class="text-xl text-white/80 mb-8 max-w-xl">
            Same-day repairs in Charlotte, Ballantyne, Matthews & Concord. Talk directly to the owners ‚Äî not a call center.
          </p>

          <!-- Trust Badges -->
          <div class="grid grid-cols-2 gap-4 mb-8">
            <div class="flex items-center gap-3 bg-white/5 rounded-lg p-3">
              <span class="text-2xl">‚ö°</span>
              <div>
                <p class="text-white font-bold text-sm">Same-Day Service</p>
                <p class="text-white/60 text-xs">Most emergencies</p>
              </div>
            </div>
            <div class="flex items-center gap-3 bg-white/5 rounded-lg p-3">
              <span class="text-2xl">üõ°Ô∏è</span>
              <div>
                <p class="text-white font-bold text-sm">Fully Insured</p>
                <p class="text-white/60 text-xs">Your home is protected</p>
              </div>
            </div>
            <div class="flex items-center gap-3 bg-white/5 rounded-lg p-3">
              <span class="text-2xl">‚≠ê</span>
              <div>
                <p class="text-white font-bold text-sm">5.0 Google Rating</p>
                <p class="text-white/60 text-xs">500+ projects</p>
              </div>
            </div>
            <div class="flex items-center gap-3 bg-white/5 rounded-lg p-3">
              <span class="text-2xl">üë®‚Äçüë©‚Äçüë¶</span>
              <div>
                <p class="text-white font-bold text-sm">Family-Owned</p>
                <p class="text-white/60 text-xs">5+ years in Charlotte</p>
              </div>
            </div>
          </div>

          <a href="tel:+19803916833" class="btn btn-emergency text-lg px-8 py-4 inline-flex lg:hidden">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call Now: (980) 391-6833
          </a>
        </div>

        <!-- Form (sticky on desktop) -->
        <div class="lg:col-span-2 lg:sticky lg:top-24">
          <LandingForm formId="lp-emergency-form" formName="Landing Page - Emergency" servicePreselect="emergency-repair" ctaText="Get Same-Day Help" />
        </div>
      </div>
    </div>
  </section>

  <!-- What We Fix -->
  <section class="section bg-white">
    <div class="container">
      <h2 class="text-3xl font-heading font-bold text-neutral-900 text-center mb-10">Emergency Services We Handle</h2>
      <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
        <div class="bg-neutral-50 rounded-xl p-6 border border-neutral-200 text-center">
          <img src="/images/projects/drywall-repair-patching-hole-spackling.webp" alt="Water damage repair" class="w-full h-40 object-cover rounded-lg mb-4" />
          <h3 class="font-bold text-neutral-900 mb-2">Water Damage Cleanup</h3>
          <p class="text-sm text-neutral-600">Ceiling leaks, flooded rooms, drywall repair ‚Äî we clean up and restore same-day.</p>

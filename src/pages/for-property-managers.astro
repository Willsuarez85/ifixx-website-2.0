---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import TrustBar from '../components/sections/TrustBar.astro';
import Testimonials from '../components/sections/Testimonials.astro';
import PropertyManagerForm from '../components/forms/PropertyManagerForm.astro';

// Get locations for service area links
const locations = await getCollection('cities');

const seo = {
  title: "Property Maintenance Services in Charlotte, NC | iFixx",
  description: "Reliable property maintenance for Charlotte landlords and property managers. Volume discounts, priority scheduling, and fast turnaround. Request a consultation today."
};

// FAQs for schema and display
const faqs = [
  {
    question: "What services do you offer property managers?",
    answer: "We provide comprehensive property maintenance including plumbing, electrical, HVAC, carpentry, painting, drywall repairs, appliance installation, lock changes, and tenant turnover preparation. We handle both routine maintenance and emergency repairs across all property types."
  },
  {
    question: "Do you offer volume discounts for multiple properties?",
    answer: "Yes, we offer competitive volume pricing for property managers with multiple units. Our pricing is based on the size of your portfolio and the frequency of service. Contact us for a custom quote tailored to your portfolio."
  },
  {
    question: "How quickly can you respond to tenant maintenance requests?",
    answer: "For routine maintenance, we typically schedule within 24-48 hours. For urgent issues like water leaks, electrical problems, or HVAC failures, we offer same-day emergency response to minimize tenant inconvenience and property damage."
  },
  {
    question: "Do you provide maintenance reporting?",
    answer: "Yes, we provide detailed documentation of all work completed including photos, descriptions, and invoices. We can also provide monthly summary reports for your records and investor communications."
  },
  {
    question: "What areas do you serve for property maintenance?",
    answer: "We serve the entire Charlotte metro area including Charlotte, Ballantyne, Matthews, Waxhaw, Mint Hill, Pineville, Monroe, and Rock Hill SC. Our service area covers properties within approximately 30 miles of uptown Charlotte."
  },
  {
    question: "How do I set up an account for my properties?",
    answer: "Getting started is easy. Simply fill out our consultation form or call us directly. We'll schedule a brief meeting to understand your portfolio, maintenance needs, and preferences. We can have your account set up and ready for service requests within 24 hours."
  }
];

// Pain points for property managers
const painPoints = [
  {
    title: "Tenant complaints piling up",
    description: "Every delayed repair risks negative reviews and tenant turnover, which costs you money."
  },
  {
    title: "Unreliable vendors",
    description: "No-shows and inconsistent quality make you look bad to tenants and property owners."
  },
  {
    title: "Vacancy costs adding up",
    description: "Slow turnover prep means empty units, lost rent, and frustrated owners."
  },
  {
    title: "Juggling multiple contractors",
    description: "Coordinating different vendors for different trades wastes your time and creates gaps."
  }
];

// Benefits for property managers
const benefits = [
  {
    title: "Volume Pricing",
    description: "Competitive rates for property managers. The more properties, the better the savings.",
    icon: "dollar"
  },
  {
    title: "Priority Scheduling",
    description: "Your maintenance requests get priority attention. Same-day emergency response available.",
    icon: "clock"
  },
  {
    title: "Single Point of Contact",
    description: "One number, one team for all your maintenance needs. No more vendor juggling.",
    icon: "phone"
  },
  {
    title: "Maintenance Reporting",
    description: "Detailed documentation with photos and descriptions. Keep owners and investors informed.",
    icon: "document"
  },
  {
    title: "Quick Turnaround",
    description: "Fast tenant turnover prep. Get units rental-ready in days, not weeks.",
    icon: "lightning"
  },
  {
    title: "Consistent Quality",
    description: "Same professional standards across every property. No surprises, no inconsistency.",
    icon: "check"
  }
];

// Services relevant to property managers
const services = [
  {
    name: "Plumbing Repairs",
    description: "Leak repairs, fixture replacements, drain cleaning, water heater service.",
    href: "/repairs/plumbing"
  },
  {
    name: "Electrical Services",
    description: "Outlet repairs, fixture installation, panel upgrades, safety inspections.",
    href: "/repairs/electrical"
  },
  {
    name: "Painting & Drywall",
    description: "Interior painting, drywall repairs, texture matching, turnover prep.",
    href: "/repairs/painting"
  },
  {
    name: "Carpentry & Doors",
    description: "Door repairs, lock changes, trim work, cabinet repairs.",
    href: "/repairs/doors-windows"
  },
  {
    name: "Flooring",
    description: "Vinyl, laminate, and tile installation and repairs.",
    href: "/remodeling/flooring-installation"
  },
  {
    name: "General Repairs",
    description: "Appliance hookups, fixture installations, misc handyman work.",
    href: "/repairs/quick-fix"
  }
];

// Process steps
const processSteps = [
  {
    step: "1",
    title: "Initial Consultation",
    description: "We meet to understand your portfolio size, property types, and maintenance preferences."
  },
  {
    step: "2",
    title: "Account Setup",
    description: "We set up your account with custom pricing and preferred communication methods."
  },
  {
    step: "3",
    title: "Submit Requests",
    description: "Send maintenance requests via phone, email, or text. We respond within hours."
  },
  {
    step: "4",
    title: "Work & Report",
    description: "Our team completes the work and provides detailed documentation for your records."
  }
];
---

<BaseLayout title={seo.title} description={seo.description} canonical="/for-property-managers">
  <!-- Schema -->
  <Fragment slot="schema">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "iFixx Remodeling & Handyman Services",
      "description": "Property maintenance services for landlords and property managers in Charlotte, NC. Volume discounts, priority scheduling, and professional reporting.",
      "url": "https://www.ifixxnc.com/for-property-managers",
      "telephone": "+1-980-391-6833",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Charlotte",
        "addressRegion": "NC",
        "addressCountry": "US"
      },
      "areaServed": {
        "@type": "GeoCircle",
        "geoMidpoint": {
          "@type": "GeoCoordinates",
          "latitude": 35.2271,
          "longitude": -80.8431
        },
        "geoRadius": "50000"
      },
      "priceRange": "$$"
    })} />
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": faqs.map(faq => ({
        "@type": "Question",
        "name": faq.question,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": faq.answer
        }
      }))
    })} />
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://www.ifixxnc.com/" },
        { "@type": "ListItem", "position": 2, "name": "For Property Managers", "item": "https://www.ifixxnc.com/for-property-managers" }
      ]
    })} />
  </Fragment>

  <!-- Hero Section with Form -->
  <section class="relative bg-neutral-900 py-16 lg:py-24">
    <div class="absolute inset-0">
      <img
        src="/images/ui/team-contractor-residential-yard.webp"
        alt="iFixx contractor at residential property"
        class="w-full h-full object-cover opacity-30"
        loading="eager"
        decoding="async"
      />
    </div>
    <div class="absolute inset-0 bg-gradient-to-br from-neutral-900/85 via-neutral-900/70 to-primary-600/30"></div>
    <div class="container relative">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <!-- Hero Content -->
        <div>
          <!-- Breadcrumb -->
          <nav class="flex items-center gap-2 text-sm text-neutral-400 mb-6">
            <a href="/" class="hover:text-white transition-colors">Home</a>
            <span>/</span>
            <span class="text-primary-500">For Property Managers</span>
          </nav>

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
            Your Local <span class="text-primary-500">Property Maintenance</span> Partner
          </h1>
          <p class="text-xl text-neutral-300 mb-8 leading-relaxed">
            We're a family-owned Charlotte team that has been serving property managers for 5+ years.
            500+ projects completed, from single-family rentals in Matthews to multi-unit properties in
            South Charlotte. One team for all your maintenance needs.
          </p>

          <!-- Key Value Props -->
          <div class="grid grid-cols-2 gap-6 mb-8">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-primary-500/20 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="text-white font-semibold">Volume Pricing</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-primary-500/20 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="text-white font-semibold">Priority Scheduling</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-primary-500/20 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <span class="text-white font-semibold">Detailed Reporting</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-primary-500/20 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <span class="text-white font-semibold">Fast Turnaround</span>
            </div>
          </div>

          <a href="tel:+19803916833" class="btn btn-outline-light text-lg px-8 py-4 lg:hidden">
            Call (980) 391-6833
          </a>
        </div>

        <!-- Form -->
        <div class="hidden lg:block">
          <PropertyManagerForm formId="pm-hero-form" />
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar -->
  <TrustBar />

  <!-- Pain Points Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">
          Challenges Property Managers Face
        </h2>
        <p class="text-lg text-neutral-600">
          Managing multiple properties means constant maintenance demands. We understand the pressure.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {painPoints.map((point) => (
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-red-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-neutral-900 mb-1">{point.title}</h3>
              <p class="text-neutral-600 text-sm">{point.description}</p>
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-12">
        <p class="text-lg text-primary-600 font-semibold mb-4">
          iFixx eliminates these headaches with one reliable partnership.
        </p>
      </div>
    </div>
  </section>

  <!-- Services for Property Managers -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">
          Our Services for Property Managers
        </h2>
        <p class="text-lg text-neutral-600">
          Comprehensive maintenance services for residential and commercial properties.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {services.map((service) => (
          <a
            href={service.href}
            class="bg-white p-6 rounded-xl border border-neutral-200 hover:border-primary-300 hover:shadow-lg transition-all group"
          >
            <h3 class="text-lg font-bold text-neutral-900 mb-2 group-hover:text-primary-600 transition-colors">
              {service.name}
            </h3>
            <p class="text-neutral-600 text-sm mb-3">
              {service.description}
            </p>
            <span class="text-primary-600 font-semibold text-sm inline-flex items-center">
              Learn more
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- How We Work Together -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">
          How We Partner With Property Managers
        </h2>
        <p class="text-lg text-neutral-600">
          A simple, streamlined process designed for busy property professionals.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {processSteps.map((step, index) => (
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4 text-white text-2xl font-bold">
              {step.step}
            </div>
            <h3 class="font-bold text-neutral-900 mb-2">{step.title}</h3>
            <p class="text-neutral-600 text-sm">{step.description}</p>
            {index < processSteps.length - 1 && (
              <div class="hidden lg:block absolute top-8 left-full w-full">
                <svg class="w-8 h-8 text-neutral-300 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-16 lg:py-24 bg-neutral-900 text-white">
    <div class="container">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Why Charlotte Property Managers Trust Us
        </h2>
        <p class="text-lg text-neutral-300">
          We're not a national franchise with rotating crews. We're a local Charlotte family
          who shows up the same team every time—and our reputation depends on keeping you happy.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {benefits.map((benefit) => (
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-primary-500 rounded-full flex items-center justify-center">
              {benefit.icon === 'dollar' && (
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              {benefit.icon === 'clock' && (
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              {benefit.icon === 'phone' && (
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              )}
              {benefit.icon === 'document' && (
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              )}
              {benefit.icon === 'lightning' && (
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              )}
              {benefit.icon === 'check' && (
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              )}
            </div>
            <div>
              <h3 class="font-bold text-white mb-1">{benefit.title}</h3>
              <p class="text-neutral-400 text-sm">{benefit.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <Testimonials
    segment="property-manager"
    title="What Property Managers Say"
    maxItems={4}
  />

  <!-- FAQ Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">
          Frequently Asked Questions
        </h2>
        <p class="text-lg text-neutral-600">
          Common questions from property managers about our services.
        </p>
      </div>

      <div class="max-w-3xl mx-auto">
        <div class="space-y-4">
          {faqs.map((faq, index) => (
            <details class="group bg-neutral-50 rounded-xl" open={index === 0}>
              <summary class="flex items-center justify-between cursor-pointer p-6 font-bold text-neutral-900 hover:text-primary-600 transition-colors">
                {faq.question}
                <svg class="w-5 h-5 text-neutral-500 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <div class="px-6 pb-6 text-neutral-600">
                {faq.answer}
              </div>
            </details>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">
          We Know the Charlotte Metro
        </h2>
        <p class="text-lg text-neutral-600">
          After 5+ years and 500+ projects across the Charlotte area, we know every neighborhood.
          From Ballantyne to Matthews, South Charlotte to Rock Hill—we're just a call away.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
        {locations.map((location) => (
          <a
            href={`/service-areas/${location.slug}`}
            class="bg-white p-4 rounded-lg text-center hover:bg-primary-50 hover:border-primary-200 border border-neutral-200 transition-colors"
          >
            <span class="font-semibold text-neutral-900">{location.data.name}</span>
            <span class="text-neutral-500 text-sm ml-1">{location.data.state}</span>
          </a>
        ))}
      </div>

      <div class="text-center mt-8">
        <a href="/service-areas" class="text-primary-600 font-semibold hover:text-primary-700 transition-colors">
          View All Service Areas →
        </a>
      </div>
    </div>
  </section>

  <!-- Mobile Form Section -->
  <section class="py-16 bg-white lg:hidden">
    <div class="container">
      <div class="max-w-md mx-auto">
        <PropertyManagerForm formId="pm-mobile-form" />
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-16 lg:py-24 bg-primary-600">
    <div class="container text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Ready to Simplify Your Property Maintenance?
      </h2>
      <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
        Schedule a consultation to discuss your portfolio and get a custom quote.
        We'll have you set up and ready for service within 24 hours.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn bg-white text-primary-600 hover:bg-neutral-100 text-lg px-8 py-4">
          Schedule Consultation
        </a>
        <a href="tel:+19803916833" class="btn btn-outline-light text-lg px-8 py-4">
          Call Now: (980) 391-6833
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

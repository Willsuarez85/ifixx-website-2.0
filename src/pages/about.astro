---
import BaseLayout from '../layouts/BaseLayout.astro';

const seoTitle = "About Us | iFixx Remodeling & Handyman Services";
const seoDescription = "Family-owned and operated since 2019. iFixx has been serving Charlotte, NC and surrounding areas with quality home repairs, remodeling, and handyman services.";

const phoneNumber = "(980) 391-6833";
const phoneHref = "tel:+19803916833";

// Organization Schema for About Page (using consistent @id with other pages)
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "HomeAndConstructionBusiness",
  "@id": "https://ifixxnc.com/#business",
  "name": "iFixx Remodeling & Handyman Services",
  "alternateName": "iFixx",
  "description": seoDescription,
  "url": "https://ifixxnc.com",
  "logo": {
    "@type": "ImageObject",
    "url": "https://ifixxnc.com/images/logo.svg",
    "width": 200,
    "height": 60
  },
  "foundingDate": "2019",
  "founder": {
    "@type": "Person",
    "name": "iFixx Team"
  },
  "telephone": "+1-980-391-6833",
  "email": "ifixx.hs@gmail.com",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Charlotte",
    "addressRegion": "NC",
    "postalCode": "28226",
    "addressCountry": "US"
  },
  "areaServed": [
    { "@type": "City", "name": "Charlotte" },
    { "@type": "City", "name": "Matthews" },
    { "@type": "City", "name": "Waxhaw" },
    { "@type": "City", "name": "Pineville" },
    { "@type": "City", "name": "Monroe" },
    { "@type": "City", "name": "Rock Hill" }
  ],
  "knowsAbout": [
    "Home Remodeling",
    "Handyman Services",
    "Kitchen Renovation",
    "Bathroom Remodeling",
    "Plumbing Repairs",
    "Electrical Work",
    "Carpentry",
    "Painting"
  ],
  "slogan": "Charlotte's Trusted Handyman & Remodeling Services",
  "priceRange": "$$",
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5.0",
    "reviewCount": "87"
  },
  "sameAs": [
    "https://facebook.com/ifixxnc",
    "https://instagram.com/ifixxnc"
  ]
};

// Breadcrumb Schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://ifixxnc.com"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "About",
      "item": "https://ifixxnc.com/about"
    }
  ]
};
---

<BaseLayout title={seoTitle} description={seoDescription} canonical="/about">
  <Fragment slot="schema">
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  </Fragment>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-neutral-50 to-white py-16 lg:py-20">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl lg:text-5xl font-heading font-bold text-neutral-900 mb-6">
          About iFixx Remodeling & Handyman Services
        </h1>
        <p class="text-lg lg:text-xl text-neutral-600 leading-relaxed">
          We're a family-owned business dedicated to providing quality home repairs and remodeling services to Charlotte, NC and surrounding areas.
        </p>
      </div>
    </div>
  </section>

  <!-- Our Story Section -->
  <section class="section">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Content -->
          <div>
            <h2 class="text-3xl font-heading font-bold text-neutral-900 mb-6">
              Our Story
            </h2>
            <div class="space-y-4 text-neutral-700">
              <p>
                Since 2019, iFixx has been providing homeowners in Charlotte and surrounding areas with reliable, professional home repair and remodeling services. What started as a small handyman business has grown into a trusted name for quality craftsmanship.
              </p>
              <p>
                We believe every home deserves quality work at fair prices. Whether it's a simple repair or a complete room remodel, we treat every project with the same care and attention to detail.
              </p>
              <p>
                Our family values drive everything we do. We're fully insured and committed to earning your trust through exceptional service.
              </p>
            </div>
          </div>

          <!-- Values -->
          <div>
            <h3 class="text-2xl font-heading font-bold text-neutral-900 mb-6">
              Why Choose iFixx?
            </h3>
            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-secondary-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <div>
                  <p class="font-semibold text-neutral-900">Fully Insured</p>
                  <p class="text-sm text-neutral-600">Full coverage for your peace of mind</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-secondary-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <div>
                  <p class="font-semibold text-neutral-900">Over 5 Years Experience</p>
                  <p class="text-sm text-neutral-600">Serving Charlotte since 2019</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-secondary-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <div>
                  <p class="font-semibold text-neutral-900">Family-Owned & Operated</p>
                  <p class="text-sm text-neutral-600">We treat your home like our own</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-secondary-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <div>
                  <p class="font-semibold text-neutral-900">Free Estimates</p>
                  <p class="text-sm text-neutral-600">No obligation quotes for all projects</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-secondary-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <div>
                  <p class="font-semibold text-neutral-900">Quality Workmanship</p>
                  <p class="text-sm text-neutral-600">We stand behind every job we complete</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="section bg-neutral-100">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-heading font-bold text-neutral-900 mb-4">
          Serving Charlotte & Surrounding Areas
        </h2>
        <p class="text-lg text-neutral-600 mb-8">
          We proudly serve homeowners throughout the greater Charlotte metropolitan area.
        </p>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 text-neutral-700">
          <div class="bg-white p-4 rounded-lg">Charlotte, NC</div>
          <div class="bg-white p-4 rounded-lg">Matthews, NC</div>
          <div class="bg-white p-4 rounded-lg">Waxhaw, NC</div>
          <div class="bg-white p-4 rounded-lg">Rock Hill, SC</div>
          <div class="bg-white p-4 rounded-lg">Pineville, NC</div>
          <div class="bg-white p-4 rounded-lg">Monroe, NC</div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl mx-auto bg-gradient-to-br from-primary-50 to-white p-8 lg:p-12 rounded-lg border border-primary-200 text-center">
        <h2 class="text-3xl font-heading font-bold text-neutral-900 mb-4">
          Ready to Get Started?
        </h2>
        <p class="text-lg text-neutral-600 mb-8">
          Contact us today for a free estimate on your home repair or remodeling project.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn btn-primary text-lg px-8 py-4">
            Request Free Estimate
          </a>
          <a href={phoneHref} class="btn btn-secondary text-lg px-8 py-4" data-event="phone_click">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            {phoneNumber}
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const seoTitle = "Blog | Home Improvement Tips & Advice | iFixx";
const seoDescription = "Expert home improvement tips, maintenance advice, and DIY guides from Charlotte's trusted handyman team. Learn when to DIY and when to call a pro.";

const posts = (await getCollection('posts')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

// Get unique categories
const categories = [...new Set(posts.map(post => post.data.category))];

// ItemList schema for blog index (important for SEO)
const blogListSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": seoTitle,
  "description": seoDescription,
  "url": "https://www.ifixxnc.com/blog",
  "mainEntity": {
    "@type": "ItemList",
    "name": "iFixx Home Improvement Blog",
    "description": seoDescription,
    "numberOfItems": posts.length,
    "itemListElement": posts.map((post, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": {
        "@type": "BlogPosting",
        "headline": post.data.title,
        "description": post.data.excerpt,
        "url": `https://www.ifixxnc.com/blog/${post.slug}`,
        "datePublished": post.data.date.toISOString()
      }
    }))
  }
};

// Breadcrumb schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://www.ifixxnc.com"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Blog",
      "item": "https://www.ifixxnc.com/blog"
    }
  ]
};
---

<BaseLayout
  title={seoTitle}
  description={seoDescription}
  canonical="/blog"
>
  <Fragment slot="schema">
    <script type="application/ld+json" set:html={JSON.stringify(blogListSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  </Fragment>
  <!-- Hero Section -->
  <section class="relative bg-neutral-900 py-16 lg:py-20 overflow-hidden">
    <div class="absolute inset-0">
      <img
        src="/images/projects/kitchen-remodeling-before-after-transformation.webp"
        alt="Kitchen remodeling before and after transformation"
        class="w-full h-full object-cover opacity-35"
        loading="eager"
        decoding="async"
      />
    </div>
    <div class="absolute inset-0 bg-gradient-to-br from-neutral-900/80 via-neutral-900/60 to-primary-600/30"></div>
    <div class="container relative">
      <div class="max-w-2xl mx-auto text-center">
        <h1 class="text-4xl lg:text-5xl font-heading font-bold text-white mb-4">
          Home Improvement Blog
        </h1>
        <p class="text-lg text-neutral-200">
          Tips, guides, and expert advice from Charlotte's trusted handyman team.
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Content -->
  <section class="section">
    <div class="container">
      <!-- Category Tags (Display only - no broken links) -->
      <div class="flex flex-wrap items-center justify-center gap-3 mb-12">
        <span class="px-4 py-2 rounded-full bg-primary-600 text-white font-medium text-sm">
          All Posts
        </span>
        {categories.map((category) => (
          <span class="px-4 py-2 rounded-full bg-neutral-100 text-neutral-700 font-medium text-sm">
            {category}
          </span>
        ))}
      </div>

      <!-- Posts Grid -->
      {posts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => (
            <article class="card group overflow-hidden">
              <!-- Cover Image -->
              <div class="aspect-[16/10] relative overflow-hidden">
                {post.data.coverImage ? (
                  <img
                    src={post.data.coverImage}
                    alt={post.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    loading="lazy"
                    decoding="async"
                  />
                ) : (
                  <div class="w-full h-full bg-gradient-to-br from-primary-100 via-secondary-100 to-primary-200 flex items-center justify-center">
                    <svg class="w-12 h-12 text-white/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                )}
              </div>
              
              <div class="p-6">
                <!-- Category & Date -->
                <div class="flex items-center gap-3 mb-3">
                  <span class="text-xs font-medium text-primary-600 bg-primary-50 px-2 py-1 rounded">
                    {post.data.category}
                  </span>
                  <span class="text-xs text-neutral-500">
                    {post.data.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                  </span>
                </div>
                
                <!-- Title -->
                <h2 class="text-xl font-heading font-semibold text-neutral-900 mb-2 group-hover:text-primary-600 transition-colors">
                  <a href={`/blog/${post.slug}`} class="hover:underline">
                    {post.data.title}
                  </a>
                </h2>
                
                <!-- Excerpt -->
                <p class="text-neutral-600 text-sm line-clamp-3 mb-4">
                  {post.data.excerpt}
                </p>
                
                <!-- Read More -->
                <a 
                  href={`/blog/${post.slug}`}
                  class="inline-flex items-center text-primary-600 font-medium text-sm hover:gap-2 transition-all"
                >
                  Read More
                  <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-neutral-500">No posts yet. Check back soon!</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>

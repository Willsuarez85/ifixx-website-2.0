---
import BaseLayout from '../layouts/BaseLayout.astro';

const seoTitle = "24/7 Emergency Services | iFixx Remodeling & Handyman Services";
const seoDescription = "Emergency home repairs available 24/7 in Charlotte, NC. Plumbing emergencies, electrical issues, storm damage, and more. Fast response when you need it most.";

const emergencyPhone = "(980) 391-6833";
const emergencyPhoneHref = "tel:+19803916833";
---

<BaseLayout title={seoTitle} description={seoDescription} canonical="/emergency-services">
  <!-- Emergency Hero Section -->
  <section class="bg-gradient-to-br from-emergency-500 to-emergency-600 py-16 lg:py-20 text-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-semibold mb-6">
          <svg class="w-5 h-5 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
          </svg>
          Available 24/7 for Emergencies
        </div>

        <h1 class="text-4xl lg:text-5xl font-heading font-bold mb-6">
          Emergency Home Repair Services
        </h1>
        <p class="text-lg lg:text-xl mb-8 text-white/90">
          When disaster strikes, we're here to help. Fast response for urgent home repairs in Charlotte and surrounding areas.
        </p>

        <a href={emergencyPhoneHref} class="btn btn-emergency text-xl px-10 py-5 bg-white text-emergency-600 hover:bg-neutral-50" data-event="phone_click">
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Call Now: {emergencyPhone}
        </a>
      </div>
    </div>
  </section>

  <!-- Emergency Types Section -->
  <section class="section">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-heading font-bold text-neutral-900 mb-8 text-center">
          We Handle These Emergencies
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Plumbing Emergencies -->
          <div class="card p-6">
            <div class="w-12 h-12 bg-emergency-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-emergency-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-heading font-bold text-neutral-900 mb-2">
              Plumbing Emergencies
            </h3>
            <ul class="space-y-2 text-neutral-700">
              <li class="flex items-start gap-2">
                <span class="text-emergency-600 mt-1">•</span>
                <span>Burst pipes and water leaks</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-emergency-600 mt-1">•</span>
                <span>Severe drain clogs</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-emergency-600 mt-1">•</span>
                <span>Water heater failures</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-emergency-600 mt-1">•</span>
                <span>Sewer backups</span>
              </li>
            </ul>
          </div>

          <!-- Electrical Emergencies -->
          <div class="card p-6">
            <div class="w-12 h-12 bg-emergency-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-emergency-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-heading font-bold text-neutral-900 mb-2">
              Electrical Emergencies
            </h3>
            <ul class="space-y-2 text-neutral-700">
              <li class="flex items-start gap-2">
                <span class="text-emergency-600 mt-1">•</span>
                <span>Power outages</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-emergency-600 mt-1">•</span>
                <span>Sparking outlets</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-emergency-600 mt-1">•</span>
                <span>Tripped breakers</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-emergency-600 mt-1">•</span>
                <span>Burning smell from electrical</span>
              </li>
            </ul>
          </div>

          <!-- Storm Damage -->
          <div class="card p-6">
            <div class="w-12 h-12 bg-emergency-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-emergency-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-heading font-bold text-neutral-900 mb-2">
              Storm & Water Damage
            </h3>
            <ul class="space-y-2 text-neutral-700">
              <li class="flex items-start gap-2">
                <span class="text-emergency-600 mt-1">•</span>
                <span>Roof leaks and damage</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-emergency-600 mt-1">•</span>
                <span>Flooding and water damage</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-emergency-600 mt-1">•</span>
                <span>Broken windows</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-emergency-600 mt-1">•</span>
                <span>Tree damage repairs</span>
              </li>
            </ul>
          </div>

          <!-- Structural Emergencies -->
          <div class="card p-6">
            <div class="w-12 h-12 bg-emergency-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-emergency-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
            </div>
            <h3 class="text-xl font-heading font-bold text-neutral-900 mb-2">
              Structural Issues
            </h3>
            <ul class="space-y-2 text-neutral-700">
              <li class="flex items-start gap-2">
                <span class="text-emergency-600 mt-1">•</span>
                <span>Broken doors or locks</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-emergency-600 mt-1">•</span>
                <span>Foundation cracks</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-emergency-600 mt-1">•</span>
                <span>Structural damage</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-emergency-600 mt-1">•</span>
                <span>Security concerns</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us for Emergencies -->
  <section class="section bg-neutral-100">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-heading font-bold text-neutral-900 mb-8">
          Why Call iFixx for Emergencies?
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-left">
          <div>
            <div class="text-4xl font-heading font-bold text-emergency-600 mb-2">24/7</div>
            <p class="text-neutral-700">Available around the clock when you need us most</p>
          </div>
          <div>
            <div class="text-4xl font-heading font-bold text-emergency-600 mb-2">&lt;1hr</div>
            <p class="text-neutral-700">Fast response time for urgent situations</p>
          </div>
          <div>
            <div class="text-4xl font-heading font-bold text-emergency-600 mb-2">100%</div>
            <p class="text-neutral-700">Fully insured and experienced professionals</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency CTA -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl mx-auto bg-gradient-to-br from-emergency-50 to-white p-8 lg:p-12 rounded-lg border border-emergency-200 text-center">
        <h2 class="text-3xl font-heading font-bold text-neutral-900 mb-4">
          Don't Wait - Get Help Now
        </h2>
        <p class="text-lg text-neutral-600 mb-8">
          Every minute counts in an emergency. Call us now for immediate assistance.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={emergencyPhoneHref} class="btn btn-emergency text-lg px-8 py-4" data-event="phone_click">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Call Emergency Line
          </a>
          <a href="/contact" class="btn btn-secondary text-lg px-8 py-4">
            Non-Emergency Contact
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

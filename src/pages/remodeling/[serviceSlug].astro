---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import TrustBar from '../../components/sections/TrustBar.astro';
import CTAIntermediate from '../../components/sections/CTAIntermediate.astro';
import CTASection from '../../components/sections/CTASection.astro';
import QuickEstimateCompact from '../../components/forms/QuickEstimateCompact.astro';
import ScrollGallery from '../../components/sections/ScrollGallery.astro';
import GoogleReviews from '../../components/sections/GoogleReviews.astro';

export async function getStaticPaths() {
  const services = await getCollection('services');
  // Only generate pages for services in the remodeling pillar
  const remodelingServices = services.filter(s => s.data.pillar === 'remodeling');
  return remodelingServices.map((service) => ({
    params: { serviceSlug: service.slug },
    props: { service },
  }));
}

interface Props {
  service: CollectionEntry<'services'>;
}

const { service } = Astro.props;
const { Content } = await service.render();

const { title, category, pillar, summary, heroImage, bullets, signs, processSteps, faqs, relatedServices, seo } = service.data;

// Get all services for related services lookup
const allServices = await getCollection('services');
const relatedServicesList = relatedServices
  ? allServices.filter(s => relatedServices.includes(s.slug) && s.slug !== service.slug)
  : [];

// Get all cities for service areas section
const allCities = await getCollection('cities');
const serviceAreas = allCities.sort((a, b) => {
  // Sort: Charlotte first, then alphabetically
  if (a.slug === 'charlotte') return -1;
  if (b.slug === 'charlotte') return 1;
  return a.data.name.localeCompare(b.data.name);
});

// Map service slugs to hero images
const serviceHeroImages: Record<string, string> = {
  'kitchen-remodeling': '/images/projects/kitchen-remodeling-complete-modern-white-cabinets-island.webp',
  'bathroom-remodeling': '/images/projects/bathroom-remodeling-modern-glass-shower-vanity.webp',
  'basement-finishing': '/images/projects/living-room-fireplace-white-brick.webp',
  'flooring-installation': '/images/projects/flooring-installation-modern-living-room-interior.webp',
  'outdoor-living': '/images/projects/outdoor-living-deck-construction-screened-porch.webp',
  'home-additions': '/images/projects/construction-wood-framing-window.webp',
};

// Map service slugs to project images
const serviceProjectImages: Record<string, string> = {
  'kitchen-remodeling': '/images/projects/kitchen-remodeling-luxury-white-cabinets-island-pendant-lights.webp',
  'bathroom-remodeling': '/images/projects/bathroom-remodeling-dual-vanity-installation-progress.webp',
  'basement-finishing': '/images/projects/closet-built-in-white-organizer.webp',
  'flooring-installation': '/images/projects/bedroom-bed-wood-dressers.webp',
  'outdoor-living': '/images/projects/outdoor-living-covered-porch-deck-wood-ceiling.webp',
  'home-additions': '/images/projects/outdoor-living-raised-deck-railing-construction.webp',
};

const heroImageSrc = heroImage || serviceHeroImages[service.slug] || '/images/ui/hero-bg.jpg';
const projectImageSrc = serviceProjectImages[service.slug] || '/images/projects/Ifixx-portfolio3.webp';

// Service schema with pillar URL structure
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": title,
  "description": seo.description,
  "serviceType": title,
  "url": `https://www.ifixxnc.com/remodeling/${service.slug}/`,
  "image": `https://www.ifixxnc.com${heroImageSrc}`,
  "provider": {
    "@type": "HomeAndConstructionBusiness",
    "@id": "https://www.ifixxnc.com/#business",
    "name": "iFixx Remodeling & Handyman Services",
    "url": "https://www.ifixxnc.com",
    "telephone": "+1-980-391-6833",
    "email": "ifixx.hs@gmail.com",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Charlotte",
      "addressRegion": "NC",
      "addressCountry": "US"
    }
  },
  "areaServed": [
    {
      "@type": "City",
      "name": "Charlotte",
      "containedInPlace": {
        "@type": "State",
        "name": "North Carolina"
      }
    },
    {
      "@type": "City",
      "name": "Ballantyne",
      "containedInPlace": {
        "@type": "State",
        "name": "North Carolina"
      }
    },
    {
      "@type": "City",
      "name": "Matthews",
      "containedInPlace": {
        "@type": "State",
        "name": "North Carolina"
      }
    },
    {
      "@type": "City",
      "name": "Mint Hill",
      "containedInPlace": {
        "@type": "State",
        "name": "North Carolina"
      }
    },
    {
      "@type": "City",
      "name": "Concord",
      "containedInPlace": {
        "@type": "State",
        "name": "North Carolina"
      }
    },
    {
      "@type": "City",
      "name": "Monroe",
      "containedInPlace": {
        "@type": "State",
        "name": "North Carolina"
      }
    },
    {
      "@type": "City",
      "name": "Pineville",
      "containedInPlace": {
        "@type": "State",
        "name": "North Carolina"
      }
    },
    {
      "@type": "City",
      "name": "Rock Hill",
      "containedInPlace": {
        "@type": "State",
        "name": "South Carolina"
      }
    },
    {
      "@type": "City",
      "name": "Waxhaw",
      "containedInPlace": {
        "@type": "State",
        "name": "North Carolina"
      }
    }
  ],
  "offers": {
    "@type": "AggregateOffer",
    "availability": "https://schema.org/InStock",
    "priceCurrency": "USD",
    "lowPrice": service.slug === 'kitchen-remodeling' ? "8000" : (service.slug === 'bathroom-remodeling' ? "5000" : "500"),
    "highPrice": service.slug === 'kitchen-remodeling' ? "60000" : (service.slug === 'bathroom-remodeling' ? "40000" : "10000")
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5.0",
    "bestRating": "5",
    "worstRating": "1",
    "reviewCount": "87",
    "ratingCount": "87"
  }
};

// Breadcrumb schema with pillar structure
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://www.ifixxnc.com"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Remodeling",
      "item": "https://www.ifixxnc.com/remodeling/"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": title,
      "item": `https://www.ifixxnc.com/remodeling/${service.slug}/`
    }
  ]
};

// FAQ schema
const faqSchema = faqs && faqs.length > 0 ? {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map((faq) => ({
    "@type": "Question",
    "name": faq.q,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.a
    }
  }))
} : null;

// Helper function to get the correct URL for a service based on its pillar
const getServiceUrl = (serviceSlug: string, servicePillar?: string) => {
  const pillars: Record<string, string> = {
    'repairs': '/repairs/',
    'remodeling': '/remodeling/',
    'emergency-services': '/emergency-services/'
  };
  const basePath = servicePillar ? pillars[servicePillar] || '/services/' : '/services/';
  return `${basePath}${serviceSlug}`;
};
---

<BaseLayout
  title={seo.title}
  description={seo.description}
  canonical={`/remodeling/${service.slug}/`}
>
  <Fragment slot="schema">
    <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
    {faqSchema && <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />}
  </Fragment>

  <!-- Hero Section with Side-by-Side Form -->
  <section class="relative bg-neutral-900 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img
        src={heroImageSrc}
        alt={`${title} services in Charlotte NC - iFixx professional team`}
        class="w-full h-full object-cover"
        width="1920"
        height="1080"
        fetchpriority="high"
        decoding="async"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-neutral-900/95 via-neutral-900/85 to-neutral-900/60"></div>
    </div>

    <div class="container relative z-10">
      <div class="py-12 lg:py-20">
        <!-- Breadcrumb -->
        <nav class="mb-6">
          <ol class="flex items-center gap-2 text-sm text-neutral-300">
            <li><a href="/" class="hover:text-primary-500 transition-colors">Home</a></li>
            <li class="text-neutral-500">/</li>
            <li><a href="/remodeling" class="hover:text-primary-500 transition-colors">Remodeling</a></li>
            <li class="text-neutral-500">/</li>
            <li class="text-white font-medium">{title}</li>
          </ol>
        </nav>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-start">
          <!-- Content Side -->
          <div class="order-2 lg:order-1">
            <!-- Category Badge -->
            <span class="inline-block px-4 py-2 bg-primary-500 text-neutral-900 text-sm font-bold rounded-full mb-4">
              Remodeling Service
            </span>

            <h1 class="text-3xl lg:text-4xl xl:text-5xl font-heading font-bold text-white mb-4">
              Professional {title} in Charlotte, NC
            </h1>

            <p class="text-lg text-neutral-200 mb-6 max-w-xl">
              {summary}
            </p>

            <!-- Benefit Icons -->
            <div class="grid grid-cols-2 gap-4 mb-8">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Quality Craftsmanship</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">On-Time Delivery</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Local Charlotte Team</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
                <span class="text-sm text-white font-medium">Fully Insured</span>
              </div>
            </div>

            <!-- Phone CTA -->
            <a href="tel:+19803916833" class="inline-flex items-center gap-3 text-white hover:text-primary-400 transition-colors">
              <div class="w-12 h-12 rounded-full bg-primary-500 flex items-center justify-center">
                <svg class="w-6 h-6 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-neutral-400">Schedule a consultation</p>
                <p class="text-xl font-heading font-bold">(980) 391-6833</p>
              </div>
            </a>
          </div>

          <!-- Form Side -->
          <div class="order-1 lg:order-2">
            <QuickEstimateCompact
              serviceSlug={service.slug}
              serviceTitle={title}
              formId={`hero-estimate-${service.slug}`}
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar -->
  <TrustBar variant="light" />

  <!-- What We Offer + Image -->
  {bullets && bullets.length > 0 && (
    <section class="section">
      <div class="container">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-6">
              What's Included
            </h2>
            <ul class="space-y-4 mb-8">
              {bullets.map((bullet) => (
                <li class="flex items-start gap-3">
                  <div class="w-6 h-6 rounded-full bg-primary-500 flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-4 h-4 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <span class="text-neutral-700">{bullet}</span>
                </li>
              ))}
            </ul>

            <div class="prose prose-neutral max-w-none">
              <Content />
            </div>
          </div>

          <div class="relative">
            <div class="rounded-2xl overflow-hidden shadow-2xl">
              <img
                src={projectImageSrc}
                alt={`${title} project by iFixx in Charlotte NC`}
                class="w-full h-auto object-cover aspect-[4/3]"
                width="600"
                height="450"
                loading="lazy"
                decoding="async"
              />
            </div>
            <div class="absolute -bottom-4 -right-4 bg-white rounded-xl shadow-xl p-4 hidden lg:block">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary-500 flex items-center justify-center">
                  <svg class="w-5 h-5 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                  </svg>
                </div>
                <div>
                  <p class="font-heading font-bold text-neutral-900 text-sm">100+ Remodels</p>
                  <p class="text-xs text-neutral-600">Completed in Charlotte</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Project Gallery -->
  <ScrollGallery
    serviceSlug={service.slug}
    title={`Our ${title} Projects`}
  />

  <!-- Intermediate CTA -->
  <CTAIntermediate
    headline={`Ready to Transform Your Space?`}
    subheadline="Schedule a free consultation to discuss your remodeling project."
    variant="primary"
    showPhone={true}
  />

  <!-- Signs You Need This Service -->
  {signs && signs.length > 0 && (
    <section class="section section-alt">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-4">
            Signs It's Time for {title}
          </h2>
          <p class="text-neutral-600">
            If any of these sound familiar, it might be time to consider a remodel.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
          {signs.map((sign) => (
            <div class="flex items-start gap-4 p-5 bg-white rounded-xl shadow-sm">
              <div class="w-10 h-10 rounded-full bg-primary-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <span class="text-neutral-700">{sign}</span>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Our Process -->
  {processSteps && processSteps.length > 0 && (
    <section class="section">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-4">
            Our Remodeling Process
          </h2>
          <p class="text-neutral-600">
            From design to completion, we guide you through every step.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-5xl mx-auto">
          {processSteps.map((step, index) => (
            <div class="text-center relative">
              {index < processSteps.length - 1 && (
                <div class="hidden lg:block absolute top-8 left-1/2 w-full h-0.5 bg-primary-200"></div>
              )}
              <div class="relative">
                <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-primary-500 flex items-center justify-center shadow-lg">
                  <span class="text-2xl font-heading font-bold text-neutral-900">{index + 1}</span>
                </div>
              </div>
              <h3 class="text-lg font-heading font-semibold text-neutral-900 mb-2">
                {step.title}
              </h3>
              <p class="text-neutral-600 text-sm">
                {step.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Google Reviews -->
  <GoogleReviews title="What Charlotte Homeowners Say" />

  <!-- FAQs -->
  {faqs && faqs.length > 0 && (
    <section class="section section-alt">
      <div class="container">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-8 text-center">
            Frequently Asked Questions
          </h2>

          <div class="space-y-4">
            {faqs.map((faq, index) => (
              <details class="group bg-white rounded-xl shadow-sm" open={index === 0}>
                <summary class="flex items-center justify-between cursor-pointer list-none p-6">
                  <span class="font-semibold text-neutral-900 pr-4">{faq.q}</span>
                  <svg class="w-5 h-5 text-primary-500 group-open:rotate-180 transition-transform flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                  </svg>
                </summary>
                <div class="px-6 pb-6">
                  <p class="text-neutral-600 leading-relaxed">
                    {faq.a}
                  </p>
                </div>
              </details>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Related Services -->
  {relatedServicesList.length > 0 && (
    <section class="section">
      <div class="container">
        <div class="text-center mb-10">
          <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-3">
            Related Services
          </h2>
          <p class="text-neutral-600">
            Explore other services that complement your remodeling project.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-4xl mx-auto">
          {relatedServicesList.map((relatedService) => (
            <a
              href={getServiceUrl(relatedService.slug, relatedService.data.pillar)}
              class="group p-6 bg-neutral-50 rounded-xl hover:bg-primary-50 transition-colors border border-neutral-100 hover:border-primary-200"
            >
              <h3 class="text-lg font-heading font-semibold text-neutral-900 group-hover:text-primary-600 mb-2 transition-colors">
                {relatedService.data.title}
              </h3>
              <p class="text-sm text-neutral-600 line-clamp-2 mb-3">
                {relatedService.data.summary}
              </p>
              <span class="inline-flex items-center text-primary-600 text-sm font-medium">
                Learn more
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Service Areas -->
  <section class="section section-alt">
    <div class="container">
      <div class="text-center mb-10">
        <h2 class="text-2xl lg:text-3xl font-heading font-bold text-neutral-900 mb-3">
          {title} Service Areas
        </h2>
        <p class="text-neutral-600 max-w-2xl mx-auto">
          We proudly serve homeowners throughout the Charlotte metro area. Click your location to learn more about our services in your neighborhood.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
        {serviceAreas.map((city) => (
          <a
            href={`/${city.slug}/${service.slug}`}
            class="group p-4 bg-white rounded-xl border border-neutral-200 hover:border-primary-300 hover:shadow-md transition-all text-center"
          >
            <div class="flex items-center justify-center gap-2">
